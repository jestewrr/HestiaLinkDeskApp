@page "/inventory/service-categories"
@using Microsoft.EntityFrameworkCore
@inject IJSRuntime JSRuntime
@inject HestiaLinkContext DbContext
@layout MainLayout

<div class="page-wrapper">
    <header class="page-topbar">
        <h1>Service Categories</h1>
        <span class="page-topbar-subtitle">Manage Service Types</span>
    </header>

    <div class="user-toolbar">
        <div class="toolbar-left">
            <div class="toolbar-search">
                <input type="text" placeholder="Search by name or ID..." @bind="SearchText" @oninput="OnSearchChanged" />
                <span class="search-icon">🔍</span>
            </div>
            <select class="filter-select" @bind="FilterStatus">
                <option value="All">All</option>
                <option value="Active">Active</option>
                <option value="Inactive">Inactive</option>
            </select>
        </div>
        <div>
            <button class="btn-secondary" style="margin-right:10px;" @onclick="OpenInactiveModal">📁 View Inactive (@InactiveCategoriesCount)</button>
            <button class="btn-create" @onclick="OpenModal">+ Create New Category</button>
        </div>
    </div>

    @if (!IsLoaded)
    {
        <div class="loading">🔄 Loading categories...</div>
    }
    else if (HasError)
    {
        <div class="error-message">
            <h4>❌ Database Error</h4>
            <p>@ErrorMessage</p>
            <button class="btn-primary" @onclick="RetryLoad">Retry</button>
        </div>
    }
    else
    {
        <div class="panel-card">
            <div class="panel-body user-list-container">
                @if (FilteredCategories.Any())
                {
                    <table class="user-table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Category Name</th>
                                <th>Function</th>
                                <th>Status</th>
                                <th style="text-align:center;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var category in FilteredCategories)
                            {
                                <tr>
                                    <td style="font-family:monospace; font-weight:700;">@category.ServiceCategoryID</td>
                                    <td style="font-weight:600;">@category.ServiceCategoryName</td>
                                    <td>@(string.IsNullOrEmpty(category.Function) ? "-" : category.Function)</td>
                                    <td><span class="badge-@(category.Status == "Active" ? "active" : "inactive")">@category.Status</span></td>
                                    <td style="text-align:center;">
                                        @if (category.Status != "Inactive")
                                        {
                                            <div style="display:flex; justify-content:center; gap:8px; align-items:center;">
                                                <button class="btn-icon-action edit" @onclick="() => OpenEditModal(category)" title="Edit">
                                                    <svg viewBox="0 0 24 24"><path d="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z"/></svg>
                                                </button>
                                                <button class="btn-icon-action archive" @onclick="() => SetInactiveCategory(category)" title="Set Inactive">
                                                    <svg viewBox="0 0 24 24"><path d="M20.54 5.23l-1.39-1.68C18.88 3.21 18.47 3 18 3H6c-.47 0-.88.21-1.16.55L3.46 5.23C3.17 5.57 3 6.02 3 6.5V19c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V6.5c0-.48-.17-.93-.46-1.27zM6.24 5h11.52l.81.97H5.44l.8-.97zM5 19V8h14v11H5zm8.45-9h-2.9v3H8l4 4 4-4h-2.55z"/></svg>
                                                </button>
                                            </div>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="no-data">No categories found</div>
                }
            </div>
        </div>
    }
</div>

@if (ShowModal)
{
    <div class="modal-overlay">
        <div class="modal-content" style="max-width: 600px;">
            <div class="modal-header-teal">
                <h2 style="margin:0; font-size:1.4rem;">@(IsEditMode ? "Edit Service Category" : "Create New Service Category")</h2>
            </div>

            <div class="form-grid">
                <div class="form-group full-width">
                    <label class="form-label">Category Name *</label>
                    <input type="text" class="form-input" @bind="CurrentCategory.ServiceCategoryName" placeholder="Enter category name" />
                </div>

                <div class="form-group full-width">
                    <label class="form-label">Function</label>
                    <input type="text" class="form-input" @bind="CurrentCategory.Function" placeholder="Enter function" />
                </div>

                @if (IsEditMode)
                {
                    <div class="form-group">
                        <label class="form-label">Status</label>
                        <select class="form-select" @bind="CurrentCategory.Status">
                            <option value="Active">Active</option>
                            <option value="Inactive">Inactive</option>
                        </select>
                    </div>
                }
            </div>

            <div class="action-footer" style="border:none; padding-bottom:0; margin-top:10px;">
                <button class="btn-primary" @onclick="SaveCategory">@(IsEditMode ? "Update Category" : "Create Category")</button>
                <button class="btn-secondary" @onclick="CloseModal">Cancel</button>
            </div>
        </div>
    </div>
}

@if (ShowInactiveModal)
{
    <div class="modal-overlay">
        <div class="modal-content" style="max-width: 800px;">
            <div class="modal-header-teal">
                <h2 style="margin:0; font-size:1.4rem;">📁 Inactive Categories</h2>
                <div style="font-size: 0.9rem; color: #64748b;">@InactiveCategories.Count inactive categories</div>
            </div>

            <div class="panel-body" style="max-height:60vh; overflow-y:auto;">
                @if (InactiveCategories.Any())
                {
                    <table class="user-table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Category Name</th>
                                <th>Function</th>
                                <th style="text-align:center;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var category in InactiveCategories)
                            {
                                <tr>
                                    <td>@category.ServiceCategoryID</td>
                                    <td style="font-weight:700;">@category.ServiceCategoryName</td>
                                    <td>@(string.IsNullOrEmpty(category.Function) ? "-" : category.Function)</td>
                                    <td style="text-align:center;">
                                        <button class="btn-secondary" style="background:#10b981;" @onclick="() => RestoreCategory(category)">🔄 Activate</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="no-data" style="padding:40px;">No inactive categories</div>
                }
            </div>

            <div class="action-footer" style="border:none; padding-bottom:0; margin-top:10px;">
                <button class="btn-secondary" @onclick="CloseInactiveModal">Close</button>
            </div>
        </div>
    </div>
}

<!-- Add Set Inactive Confirmation Modal -->
@if (ShowSetInactiveConfirm)
{
    <div class="modal-overlay">
        <div class="modal-content" style="max-width: 420px;">
            <div class="modal-header-teal">
                <h2 style="margin:0; font-size:1.2rem;">Confirm Set Inactive</h2>
            </div>
            <div style="padding: 20px;">
                <p>Are you sure you want to set category <strong>@SetInactiveTarget?.ServiceCategoryName</strong> to inactive?</p>
                <p style="color: #f59e0b; font-size: 0.9rem;">Inactive categories will not appear in active lists but can be activated later.</p>
            </div>
            <div class="action-footer" style="border:none; padding-bottom:0;">
                <button type="button" class="btn-secondary" style="background:#f59e0b;" @onclick="ConfirmSetInactive">Set Inactive</button>
                <button type="button" class="btn-secondary" @onclick="CancelSetInactive">Cancel</button>
            </div>
        </div>
    </div>
}

@code {
    private string SearchText = "";
    private string FilterStatus = "Active";
    private bool ShowModal = false;
    private bool ShowInactiveModal = false;
    private bool IsEditMode = false;
    private bool IsLoaded = false;
    private bool HasError = false;
    private string ErrorMessage = string.Empty;

    private ServiceCategory CurrentCategory = new();
    private List<ServiceCategory> Categories = new();

    private ServiceCategory SetInactiveTarget = new();
    private bool ShowSetInactiveConfirm = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        try
        {
            HasError = false;
            ErrorMessage = string.Empty;

            Categories = await DbContext.ServiceCategories.OrderBy(c => c.ServiceCategoryName).ToListAsync();

            IsLoaded = true;
        }
        catch (Exception ex)
        {
            HasError = true;
            ErrorMessage = ex.Message;
            await JSRuntime.InvokeVoidAsync("alert", $"Database Error: {ex.Message}");
            IsLoaded = true;
        }
    }

    private async Task RetryLoad()
    {
        IsLoaded = false;
        StateHasChanged();
        await Task.Delay(500);
        await LoadData();
    }

    private void OnSearchChanged(ChangeEventArgs e)
    {
        SearchText = e.Value?.ToString() ?? string.Empty;
    }

    private List<ServiceCategory> FilteredCategories
    {
        get
        {
            var query = Categories.AsQueryable();
            if (!string.IsNullOrWhiteSpace(SearchText))
            {
                query = query.Where(c => c.ServiceCategoryName.Contains(SearchText, StringComparison.OrdinalIgnoreCase) ||
                                         c.ServiceCategoryID.ToString().Contains(SearchText));
            }

            if (FilterStatus == "Active")
                query = query.Where(c => c.Status == "Active");
            else if (FilterStatus == "Inactive")
                query = query.Where(c => c.Status == "Inactive");

            return query.OrderBy(c => c.ServiceCategoryName).ToList();
        }
    }

    private List<ServiceCategory> InactiveCategories => Categories.Where(c => c.Status == "Inactive").ToList();
    private int InactiveCategoriesCount => InactiveCategories.Count;

    private void OpenModal()
    {
        CurrentCategory = new ServiceCategory { Status = "Active" };
        IsEditMode = false;
        ShowModal = true;
    }

    private void CloseModal() { ShowModal = false; }

    private void OpenEditModal(ServiceCategory category)
    {
        CurrentCategory = new ServiceCategory
        {
            ServiceCategoryID = category.ServiceCategoryID,
            ServiceCategoryName = category.ServiceCategoryName,
            Function = category.Function,
            Status = category.Status,
            CreatedAt = category.CreatedAt,
            UpdatedAt = category.UpdatedAt
        };
        IsEditMode = true;
        ShowModal = true;
    }

    private async Task SaveCategory()
    {
        try
        {
            if (string.IsNullOrWhiteSpace(CurrentCategory.ServiceCategoryName))
            {
                await JSRuntime.InvokeVoidAsync("alert", "Category Name is required");
                return;
            }

            if (IsEditMode)
            {
                var existing = await DbContext.ServiceCategories.FirstOrDefaultAsync(c => c.ServiceCategoryID == CurrentCategory.ServiceCategoryID);
                if (existing != null)
                {
                    existing.ServiceCategoryName = CurrentCategory.ServiceCategoryName;
                    existing.Function = CurrentCategory.Function;
                    existing.Status = CurrentCategory.Status;
                    existing.UpdatedAt = DateTime.UtcNow;
                    DbContext.ServiceCategories.Update(existing);
                    await DbContext.SaveChangesAsync();
                }
            }
            else
            {
                CurrentCategory.CreatedAt = DateTime.UtcNow;
                CurrentCategory.UpdatedAt = DateTime.UtcNow;
                DbContext.ServiceCategories.Add(CurrentCategory);
                await DbContext.SaveChangesAsync();
            }

            await LoadData();
            CloseModal();
            await JSRuntime.InvokeVoidAsync("alert", "Category saved successfully");
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error saving category: {ex.Message}");
        }
    }

    private void SetInactiveCategory(ServiceCategory category)
    {
        SetInactiveTarget = category;
        ShowSetInactiveConfirm = true;
    }

    private void CancelSetInactive()
    {
        ShowSetInactiveConfirm = false;
        SetInactiveTarget = new ServiceCategory();
    }

    private async Task ConfirmSetInactive()
    {
        try
        {
            var category = await DbContext.ServiceCategories.FirstOrDefaultAsync(c => c.ServiceCategoryID == SetInactiveTarget.ServiceCategoryID);
            if (category != null)
            {
                category.Status = "Inactive";
                category.UpdatedAt = DateTime.UtcNow;
                DbContext.ServiceCategories.Update(category);
                await DbContext.SaveChangesAsync();
                await LoadData();
                await JSRuntime.InvokeVoidAsync("alert", "Category set to inactive");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error setting category to inactive: {ex.Message}");
        }
        finally
        {
            ShowSetInactiveConfirm = false;
            SetInactiveTarget = new ServiceCategory();
        }
    }

    private void OpenInactiveModal()
    {
        ShowInactiveModal = true;
    }

    private void CloseInactiveModal()
    {
        ShowInactiveModal = false;
    }

    private async Task RestoreCategory(ServiceCategory category)
    {
        try
        {
            var existing = await DbContext.ServiceCategories.FirstOrDefaultAsync(c => c.ServiceCategoryID == category.ServiceCategoryID);
            if (existing != null)
            {
                existing.Status = "Active";
                existing.UpdatedAt = DateTime.UtcNow;
                DbContext.ServiceCategories.Update(existing);
                await DbContext.SaveChangesAsync();
                await LoadData();
                await JSRuntime.InvokeVoidAsync("alert", "Category activated");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error activating category: {ex.Message}");
        }
    }
}