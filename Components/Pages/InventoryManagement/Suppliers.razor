{
    <div class="modal-overlay">
        <div class="modal-content" style="max-width: 600px;">
            <div class="modal-header-teal">
                <h2 style="margin:0; font-size:1.4rem;">Supplier Details</h2>
            </div>

            <div class="detail-grid">
                <div class="detail-item">
                    <span class="detail-label">Code</span>
                    <span class="detail-value" style="font-family:monospace;">@ViewSupplier?.SupplierCode</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Name</span>
                    <span class="detail-value" style="font-weight:700;">@ViewSupplier?.SupplierName</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Type</span>
                    <span class="detail-value">@(ViewSupplier?.SupplierType ?? "N/A")</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Contact Person</span>
                    <span class="detail-value">@(ViewSupplier?.ContactPerson ?? "-")</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Phone</span>
                    <span class="detail-value">@(ViewSupplier?.ContactPhone ?? "-")</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Email</span>
                    <span class="detail-value">@(ViewSupplier?.ContactEmail ?? "-")</span>
                </div>
                <div class="detail-item full-width">
                    <span class="detail-label">Address</span>
                    <span class="detail-value">@(ViewSupplier?.Address ?? "-")</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Items Supplied</span>
                    <span class="detail-value" style="font-weight:700; color:#0f766e;">@(ViewSupplier != null ? SupplierItemCounts.GetValueOrDefault(ViewSupplier.SupplierID, 0) : 0)</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Total Spend (YTD)</span>
                    <span class="detail-value" style="font-weight:700; color:#0f766e;">₱@(ViewSupplier != null ? SupplierSpends.GetValueOrDefault(ViewSupplier.SupplierID, 0).ToString("N2") : "0.00")</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Status</span>
                    <span class="detail-value">
                        @if (ViewSupplier?.IsActive == true)
                        {
                            <span class="badge-active">Active</span>
                        }
                        else
                        {
                            <span class="badge-inactive">Inactive</span>
                        }
                    </span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Created</span>
                    <span class="detail-value">@(ViewSupplier?.CreatedDate?.ToString("MM/dd/yyyy") ?? "-")</span>
                </div>
            </div>

            <div class="action-footer" style="border:none; padding-bottom:0; margin-top:20px;">
                <button class="btn-primary" @onclick="() => { ShowViewModal = false; OpenEditModal(ViewSupplier!); }">Edit Supplier</button>
                <button class="btn-secondary" @onclick="CloseViewModal">Close</button>
            </div>
        </div>
    </div>
}

@* ===== INACTIVE SUPPLIERS MODAL ===== *@
@if (ShowInactiveModal)
{
    <div class="modal-overlay">
        <div class="modal-content" style="max-width: 800px;">
            <div class="modal-header-teal">
                <h2 style="margin:0; font-size:1.4rem;">Inactive Suppliers</h2>
                <div style="font-size: 0.9rem; color: #94a3b8;">@InactiveSuppliers.Count inactive suppliers</div>
            </div>

            <div class="panel-body" style="max-height:60vh; overflow-y:auto;">
                @if (InactiveSuppliers.Any())
                {
                    <table class="user-table">
                        <thead>
                            <tr>
                                <th>Code</th>
                                <th>Name</th>
                                <th>Type</th>
                                <th>Contact</th>
                                <th style="text-align:center;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var supplier in InactiveSuppliers)
                            {
                                <tr>
                                    <td style="font-family:monospace;">@supplier.SupplierCode</td>
                                    <td style="font-weight:700;">@supplier.SupplierName</td>
                                    <td>@(supplier.SupplierType ?? "N/A")</td>
                                    <td>@(supplier.ContactPerson ?? "-")</td>
                                    <td style="text-align:center;">
                                        <button class="btn-secondary" style="background:#10b981;" @onclick="() => RestoreSupplier(supplier)">Activate</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="no-data" style="padding:40px;">No inactive suppliers</div>
                }
            </div>

            <div class="action-footer" style="border:none; padding-bottom:0; margin-top:10px;">
                <button class="btn-secondary" @onclick="CloseInactiveModal">Close</button>
            </div>
        </div>
    </div>
}

@* ===== CONFIRM SET INACTIVE MODAL ===== *@
@if (ShowConfirmInactive)
{
    <div class="modal-overlay">
        <div class="modal-content" style="max-width: 420px;">
            <div class="modal-header-teal">
                <h2 style="margin:0; font-size:1.2rem;">Confirm Set Inactive</h2>
            </div>
            <div style="padding: 20px;">
                <p>Are you sure you want to set <strong>@InactiveTarget?.SupplierName</strong> to inactive?</p>
                <p style="color: #f59e0b; font-size: 0.9rem;">Inactive suppliers can be activated later from the inactive list.</p>
            </div>
            <div class="action-footer" style="border:none; padding-bottom:0;">
                <button type="button" class="btn-secondary" style="background:#f59e0b;" @onclick="ConfirmSetInactive">Set Inactive</button>
                <button type="button" class="btn-secondary" @onclick="CancelSetInactive">Cancel</button>
            </div>
        </div>
    </div>
}

@code {
    // State
    private string SearchText = "";
    private string FilterType = "";
    private string FilterStatus = "Active";
    private bool ShowModal = false;
    private bool ShowViewModal = false;
    private bool ShowInactiveModal = false;
    private bool ShowConfirmInactive = false;
    private bool IsEditMode = false;
    private bool IsLoaded = false;
    private bool HasError = false;
    private string ErrorMessage = string.Empty;

    // Data
    private Supplier CurrentSupplier = new();
    private Supplier? ViewSupplier;
    private Supplier? InactiveTarget;
    private List<Supplier> SupplierList = new();
    private Dictionary<int, int> SupplierItemCounts = new();
    private Dictionary<int, decimal> SupplierSpends = new();
    private int TotalItemsLinked = 0;
    private decimal TotalSpendYTD = 0;

    private List<string> SupplierTypes => new() { "FOOD", "BEVERAGE", "AMENITIES", "CLEANING", "LINEN", "MAINTENANCE", "OTHER" };

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        try
        {
            HasError = false;
            ErrorMessage = string.Empty;

            SupplierList = await DbContext.Suppliers
                .AsNoTracking()
                .OrderBy(s => s.SupplierName)
                .ToListAsync();

            // Load item counts and spends
            SupplierItemCounts.Clear();
            SupplierSpends.Clear();

            foreach (var supplier in SupplierList.Where(s => s.IsActive == true))
            {
                var itemCount = await InventoryService.GetSupplierItemCountAsync(supplier.SupplierID);
                var spend = await InventoryService.GetSupplierTotalSpendAsync(supplier.SupplierID);
                SupplierItemCounts[supplier.SupplierID] = itemCount;
                SupplierSpends[supplier.SupplierID] = spend;
            }

            TotalItemsLinked = SupplierItemCounts.Values.Sum();
            TotalSpendYTD = SupplierSpends.Values.Sum();

            IsLoaded = true;
        }
        catch (Exception ex)
        {
            HasError = true;
            ErrorMessage = ex.Message;
            IsLoaded = true;
        }
    }

    private void OnSearchChanged(ChangeEventArgs e)
    {
        SearchText = e.Value?.ToString() ?? string.Empty;
    }

    private List<Supplier> FilteredSuppliers
    {
        get
        {
            var items = SupplierList.AsEnumerable();

            // Search filter
            if (!string.IsNullOrWhiteSpace(SearchText))
            {
                var searchLower = SearchText.ToLowerInvariant();
                items = items.Where(s =>
                    s.SupplierName.ToLowerInvariant().Contains(searchLower) ||
                    s.SupplierCode.ToLowerInvariant().Contains(searchLower) ||
                    (s.ContactPerson != null && s.ContactPerson.ToLowerInvariant().Contains(searchLower)));
            }

            // Type filter
            if (!string.IsNullOrEmpty(FilterType))
            {
                items = items.Where(s => s.SupplierType == FilterType);
            }

            // Status filter
            if (FilterStatus == "Active")
                items = items.Where(s => s.IsActive == true);
            else if (FilterStatus == "Inactive")
                items = items.Where(s => s.IsActive != true);

            return items.OrderBy(s => s.SupplierName).ToList();
        }
    }

    private List<Supplier> InactiveSuppliers => SupplierList.Where(s => s.IsActive != true).ToList();
    private int InactiveCount => InactiveSuppliers.Count;

    // Modal handlers
    private async Task OpenCreateModal()
    {
        var newCode = await InventoryService.GenerateSupplierCodeAsync();
        CurrentSupplier = new Supplier
        {
            SupplierCode = newCode,
            SupplierName = string.Empty,
            IsActive = true,
            CreatedDate = DateTime.Now
        };
        IsEditMode = false;
        ShowModal = true;
    }

    private void OpenEditModal(Supplier supplier)
    {
        CurrentSupplier = new Supplier
        {
            SupplierID = supplier.SupplierID,
            SupplierCode = supplier.SupplierCode,
            SupplierName = supplier.SupplierName,
            ContactPerson = supplier.ContactPerson,
            ContactPhone = supplier.ContactPhone,
            ContactEmail = supplier.ContactEmail,
            Address = supplier.Address,
            SupplierType = supplier.SupplierType,
            IsActive = supplier.IsActive,
            CreatedDate = supplier.CreatedDate,
            UpdatedDate = supplier.UpdatedDate
        };
        IsEditMode = true;
        ShowModal = true;
    }

    private void CloseModal() => ShowModal = false;

    private void OpenViewModal(Supplier supplier)
    {
        ViewSupplier = supplier;
        ShowViewModal = true;
    }

    private void CloseViewModal() => ShowViewModal = false;

    private void OpenInactiveModal() => ShowInactiveModal = true;
    private void CloseInactiveModal() => ShowInactiveModal = false;

    private void SetInactiveSupplier(Supplier supplier)
    {
        InactiveTarget = supplier;
        ShowConfirmInactive = true;
    }

    private void CancelSetInactive()
    {
        ShowConfirmInactive = false;
        InactiveTarget = null;
    }

    // Save operations
    private async Task SaveSupplier()
    {
        try
        {
            // Trim input values
            CurrentSupplier.SupplierCode = CurrentSupplier.SupplierCode?.Trim() ?? string.Empty;
            CurrentSupplier.SupplierName = CurrentSupplier.SupplierName?.Trim() ?? string.Empty;
            CurrentSupplier.ContactPerson = CurrentSupplier.ContactPerson?.Trim();
            CurrentSupplier.ContactPhone = CurrentSupplier.ContactPhone?.Trim();
            CurrentSupplier.ContactEmail = CurrentSupplier.ContactEmail?.Trim();
            CurrentSupplier.Address = CurrentSupplier.Address?.Trim();
            CurrentSupplier.SupplierType = CurrentSupplier.SupplierType?.Trim();

            // Validation
            if (string.IsNullOrWhiteSpace(CurrentSupplier.SupplierCode))
            {
                await JSRuntime.InvokeVoidAsync("alert", "Supplier Code is required");
                return;
            }

            if (string.IsNullOrWhiteSpace(CurrentSupplier.SupplierName))
            {
                await JSRuntime.InvokeVoidAsync("alert", "Supplier Name is required");
                return;
            }

            // Check for duplicate code (case-insensitive)
            var existingCode = await DbContext.Suppliers
                .AsNoTracking()
                .FirstOrDefaultAsync(s => s.SupplierCode.ToLower() == CurrentSupplier.SupplierCode.ToLower() 
                    && s.SupplierID != CurrentSupplier.SupplierID);
            
            if (existingCode != null)
            {
                await JSRuntime.InvokeVoidAsync("alert", "Supplier Code already exists. Please use a different code.");
                return;
            }

            if (IsEditMode)
            {
                // Update existing supplier using the service
                var success = await InventoryService.UpdateSupplierAsync(CurrentSupplier);
                if (!success)
                {
                    await JSRuntime.InvokeVoidAsync("alert", "Failed to update supplier. Supplier not found.");
                    return;
                }
            }
            else
            {
                // Create new supplier using the service
                CurrentSupplier.CreatedDate = DateTime.Now;
                CurrentSupplier.IsActive = true;
                await InventoryService.CreateSupplierAsync(CurrentSupplier);
            }

            await LoadData();
            CloseModal();
            await JSRuntime.InvokeVoidAsync("alert", IsEditMode ? "Supplier updated successfully" : "Supplier added successfully");
        }
        catch (DbUpdateException dbEx)
        {
            var innerMessage = dbEx.InnerException?.Message ?? dbEx.Message;
            Console.WriteLine($"Database error: {innerMessage}");
            await JSRuntime.InvokeVoidAsync("alert", $"Database error: {innerMessage}");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error saving supplier: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("alert", $"Error saving supplier: {ex.Message}");
        }
    }

    private async Task ConfirmSetInactive()
    {
        try
        {
            if (InactiveTarget == null) return;

            await InventoryService.DeactivateSupplierAsync(InactiveTarget.SupplierID);
            await LoadData();
            await JSRuntime.InvokeVoidAsync("alert", "Supplier set to inactive");
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error: {ex.Message}");
        }
        finally
        {
            ShowConfirmInactive = false;
            InactiveTarget = null;
        }
    }

    private async Task RestoreSupplier(Supplier supplier)
    {
        try
        {
            await InventoryService.ReactivateSupplierAsync(supplier.SupplierID);
            await LoadData();
            await JSRuntime.InvokeVoidAsync("alert", "Supplier activated");
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error: {ex.Message}");
        }
    }
}

