@code {
    private string CurrentView = "status";
    private bool ShowAddRoomModal = false;
    private bool ShowEditRoomModal = false;
    private bool ShowAddRoomTypeModal = false;
    private bool ShowAddFloorModal = false;

    private List<Room> Rooms = new List<Room>();
    private List<Floor> Floors = new List<Floor>();
    private List<RoomType> RoomTypes = new List<RoomType>();

    private Room NewRoom = new Room();
    private Room SelectedRoom = new Room();
    private Floor NewFloor = new Floor();
    private RoomType NewRoomType = new RoomType();

    protected override void OnInitialized()
    {
        // Initialize sample data
        Floors.Add(new Floor { FloorNumber = 1, Status = "Active" });
        Floors.Add(new Floor { FloorNumber = 2, Status = "Active" });
        Floors.Add(new Floor { FloorNumber = 3, Status = "Active" });
        Floors.Add(new Floor { FloorNumber = 4, Status = "Active" });

        Rooms.Add(new Room { RoomNumber = "1", Floor = 1, Status = "Available", RoomType = "Standard" });
        Rooms.Add(new Room { RoomNumber = "2", Floor = 1, Status = "Occupied", RoomType = "Deluxe" });
        Rooms.Add(new Room { RoomNumber = "3", Floor = 1, Status = "Maintenance", RoomType = "Suite" });
        Rooms.Add(new Room { RoomNumber = "4", Floor = 1, Status = "Available", RoomType = "Standard" });

        Rooms.Add(new Room { RoomNumber = "1", Floor = 2, Status = "Available", RoomType = "Standard" });
        Rooms.Add(new Room { RoomNumber = "2", Floor = 2, Status = "Available", RoomType = "Deluxe" });
        Rooms.Add(new Room { RoomNumber = "3", Floor = 2, Status = "Available", RoomType = "Suite" });
        Rooms.Add(new Room { RoomNumber = "4", Floor = 2, Status = "Maintenance", RoomType = "Standard" });

        Rooms.Add(new Room { RoomNumber = "1", Floor = 3, Status = "Maintenance", RoomType = "Standard" });
        Rooms.Add(new Room { RoomNumber = "2", Floor = 3, Status = "Available", RoomType = "Deluxe" });
        Rooms.Add(new Room { RoomNumber = "3", Floor = 3, Status = "Available", RoomType = "Suite" });
        Rooms.Add(new Room { RoomNumber = "4", Floor = 3, Status = "Maintenance", RoomType = "Standard" });

        Rooms.Add(new Room { RoomNumber = "1", Floor = 4, Status = "Available", RoomType = "Standard" });
        Rooms.Add(new Room { RoomNumber = "2", Floor = 4, Status = "Available", RoomType = "Deluxe" });
        Rooms.Add(new Room { RoomNumber = "3", Floor = 4, Status = "Maintenance", RoomType = "Suite" });
        Rooms.Add(new Room { RoomNumber = "4", Floor = 4, Status = "Available", RoomType = "Standard" });
    }

    private string GetRoomStatusClass(string status)
    {
        return status.ToLower() switch
        {
            "available" => "available",
            "occupied" => "occupied",
            "maintenance" => "maintenance",
            "cleaning" => "cleaning",
            _ => "available"
        };
    }

    private void ShowRoomStatusView()
    {
        CurrentView = "status";
    }

    private void OpenAddRoomModal()
    {
        NewRoom = new Room();
        ShowAddRoomModal = true;
    }

    private void OpenEditRoomModal(Room room)
    {
        SelectedRoom = new Room
        {
            RoomNumber = room.RoomNumber,
            Floor = room.Floor,
            Status = room.Status,
            RoomType = room.RoomType,
            MaxOccupancy = room.MaxOccupancy,
            Price = room.Price,
            Description = room.Description
        };
        ShowEditRoomModal = true;
    }

    private void OpenAddFloorModal()
    {
        NewFloor = new Floor();
        ShowAddFloorModal = true;
    }

    private void CloseModals()
    {
        ShowAddRoomModal = false;
        ShowEditRoomModal = false;
        ShowAddRoomTypeModal = false;
        ShowAddFloorModal = false;
    }

    private void AddRoom()
    {
        if (!string.IsNullOrWhiteSpace(NewRoom.RoomNumber))
        {
            Rooms.Add(new Room
            {
                RoomNumber = NewRoom.RoomNumber,
                Floor = NewRoom.Floor,
                Status = "Available",
                RoomType = NewRoom.RoomType
            });
            NewRoom = new Room();
        }
    }

    private void UpdateRoom()
    {
        // Update logic here
    }

    private void DeleteRoom()
    {
        // Delete logic here
    }

    private void SelectRoomFromList(Room room)
    {
        NewRoom = new Room
        {
            RoomNumber = room.RoomNumber,
            Floor = room.Floor,
            Status = room.Status,
            RoomType = room.RoomType
        };
    }

    private void SaveRoomEdit()
    {
        var existingRoom = Rooms.FirstOrDefault(r => r.RoomNumber == SelectedRoom.RoomNumber && r.Floor == SelectedRoom.Floor);
        if (existingRoom != null)
        {
            existingRoom.Status = SelectedRoom.Status;
            existingRoom.RoomType = SelectedRoom.RoomType;
            existingRoom.MaxOccupancy = SelectedRoom.MaxOccupancy;
            existingRoom.Price = SelectedRoom.Price;
            existingRoom.Description = SelectedRoom.Description;
        }
        CloseModals();
    }

    private void AddFloor()
    {
        if (NewFloor.FloorNumber > 0)
        {
            Floors.Add(new Floor
            {
                FloorNumber = NewFloor.FloorNumber,
                Status = NewFloor.Status,
                Description = NewFloor.Description
            });
            CloseModals();
        }
    }

    private void ConfirmRoomType()
    {
        // Add room type logic
    }

    private void DeleteRoomType()
    {
        // Delete room type logic
    }

    private void UpdateRoomType()
