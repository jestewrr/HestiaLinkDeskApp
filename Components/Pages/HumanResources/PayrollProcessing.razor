@page "/hr/payroll-processing"
@using HestiaLink.Components.Layout
@layout MainLayout

<div class="page-wrapper">
    <header class="page-topbar">
        <h1>Payroll Processing</h1>
        <span class="page-topbar-subtitle">Salary & Compensation Management</span>
    </header>

    <section class="page-content">
        <!-- Payroll Period Selector -->
        <div style="background: var(--color-white); padding: 20px; border-radius: 12px; margin-bottom: 30px; box-shadow: 0 2px 8px rgba(0,0,0,0.08);">
            <div style="display: flex; gap: 20px; align-items: flex-end; flex-wrap: wrap;">
                <div style="flex: 1; min-width: 200px;">
                    <label style="font-weight: 700; color: var(--color-dark-teal); margin-bottom: 8px; display: block;">Payroll Period</label>
                    <select class="form-select" @bind="SelectedPeriod">
                        <option>December 1-15, 2025</option>
                        <option>December 16-31, 2025</option>
                        <option>November 16-30, 2025</option>
                        <option>November 1-15, 2025</option>
                    </select>
                </div>
                <div style="flex: 1; min-width: 200px;">
                    <label style="font-weight: 700; color: var(--color-dark-teal); margin-bottom: 8px; display: block;">Payroll Type</label>
                    <select class="form-select" @bind="PayrollType">
                        <option>Regular Payroll</option>
                        <option>13th Month Pay</option>
                        <option>Bonus</option>
                        <option>Adjustment</option>
                    </select>
                </div>
                <button class="btn-create" @onclick="GeneratePayroll">Generate Payroll</button>
            </div>
        </div>

        <!-- Summary Cards -->
        <div style="display: grid; grid-template-columns: repeat(4, 1fr); gap: 20px; margin-bottom: 30px;">
            <div class="stat-card">
                <div class="stat-title">Total Gross Pay</div>
                <div class="stat-value">‚Ç±@TotalGrossPay.ToString("N2")</div>
            </div>
            <div class="stat-card">
                <div class="stat-title">Total Deductions</div>
                <div class="stat-value" style="color: #991b1b;">‚Ç±@TotalDeductions.ToString("N2")</div>
            </div>
            <div class="stat-card">
                <div class="stat-title">Net Payroll</div>
                <div class="stat-value" style="color: var(--color-teal);">‚Ç±@NetPayroll.ToString("N2")</div>
            </div>
            <div class="stat-card">
                <div class="stat-title">Employees</div>
                <div class="stat-value">@PayrollRecords.Count</div>
            </div>
        </div>

        <!-- Toolbar -->
        <div class="user-toolbar">
            <div class="toolbar-left">
                <div class="toolbar-search">
                    <input type="text" placeholder="Search employee..." @bind="SearchText" />
                    <span class="search-icon">üîç</span>
                </div>
                <select class="filter-select" @bind="DepartmentFilter">
                    <option value="">All Departments</option>
                    <option value="Front Office">Front Office</option>
                    <option value="Housekeeping">Housekeeping</option>
                    <option value="Food & Beverage">Food & Beverage</option>
                    <option value="Maintenance">Maintenance</option>
                </select>
                <select class="filter-select" @bind="EmployeeTypeFilter">
                    <option value="">All Types</option>
                    <option value="Rank & File">Rank & File</option>
                    <option value="Managerial">Managerial</option>
                </select>
            </div>
            <div style="display: flex; gap: 12px;">
                <button class="btn-outlined" @onclick="ExportPayroll">üìä Export Excel</button>
                <button class="btn-create" @onclick="ProcessPayroll">Process Payroll</button>
            </div>
        </div>

        <!-- Payroll Table -->
        <div class="panel-card">
            <div class="panel-body user-list-container">
                <table class="user-table">
                    <thead>
                        <tr>
                            <th>Employee ID</th>
                            <th>Employee Name</th>
                            <th>Department</th>
                            <th>Position</th>
                            <th>Type</th>
                            <th>Basic Salary</th>
                            <th>Overtime</th>
                            <th>Service Charge</th>
                            <th>Deductions</th>
                            <th>Net Pay</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var record in FilteredPayroll)
                        {
                            <tr>
                                <td style="font-family: monospace; font-weight: 700;">@record.EmployeeId</td>
                                <td style="font-weight: 700;">@record.EmployeeName</td>
                                <td>@record.Department</td>
                                <td>@record.Position</td>
                                <td>
                                    <span class="status-badge" style="background: @(record.EmployeeType == "Rank & File" ? "#dbeafe" : "#fef3c7"); color: var(--color-dark-teal);">
                                        @record.EmployeeType
                                    </span>
                                </td>
                                <td>‚Ç±@record.BasicSalary.ToString("N2")</td>
                                <td style="color: var(--color-teal); font-weight: 700;">‚Ç±@record.Overtime.ToString("N2")</td>
                                <td style="color: var(--color-teal); font-weight: 700;">‚Ç±@record.ServiceCharge.ToString("N2")</td>
                                <td style="color: #991b1b; font-weight: 700;">‚Ç±@record.TotalDeductions.ToString("N2")</td>
                                <td style="font-weight: 900; color: var(--color-teal); font-size: 1.05rem;">‚Ç±@record.NetPay.ToString("N2")</td>
                                <td>
                                    <div style="display: flex; gap: 8px; justify-content: center;">
                                        <button class="btn-icon btn-icon-edit" title="View Payslip" @onclick="() => ViewPayslip(record)">üìÑ</button>
                                        <button class="btn-icon btn-icon-edit" title="Edit" @onclick="() => OpenEditModal(record)">‚úèÔ∏è</button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Service Charge Distribution Section (Rank & File Only) -->
        <div class="panel-card" style="margin-top: 30px;">
            <div style="background: var(--color-dark-teal); color: var(--color-white); padding: 16px 24px; font-weight: 900; border-radius: 12px 12px 0 0;">
                Service Charge Distribution (Rank & File Only)
            </div>
            <div class="panel-body">
                <div style="background: var(--color-cream); padding: 20px; border-radius: 8px; margin-bottom: 20px;">
                    <div style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 20px;">
                        <div>
                            <div style="font-size: 0.9rem; color: var(--color-dark-teal); margin-bottom: 4px;">Total SC Collected</div>
                            <div style="font-size: 1.5rem; font-weight: 900; color: var(--color-teal);">‚Ç±@TotalServiceChargeCollected.ToString("N2")</div>
                        </div>
                        <div>
                            <div style="font-size: 0.9rem; color: var(--color-dark-teal); margin-bottom: 4px;">Eligible Employees</div>
                            <div style="font-size: 1.5rem; font-weight: 900; color: var(--color-dark-teal);">@RankAndFileCount</div>
                        </div>
                        <div>
                            <div style="font-size: 0.9rem; color: var(--color-dark-teal); margin-bottom: 4px;">Per Employee Share</div>
                            <div style="font-size: 1.5rem; font-weight: 900; color: var(--color-teal);">‚Ç±@ServiceChargePerEmployee.ToString("N2")</div>
                        </div>
                    </div>
                </div>

                <table class="user-table">
                    <thead>
                        <tr>
                            <th>Employee</th>
                            <th>Department</th>
                            <th>Position</th>
                            <th>Days Worked</th>
                            <th>SC Share</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var employee in PayrollRecords.Where(p => p.EmployeeType == "Rank & File"))
                        {
                            <tr>
                                <td style="font-weight: 700;">@employee.EmployeeName</td>
                                <td>@employee.Department</td>
                                <td>@employee.Position</td>
                                <td style="font-weight: 700; text-align: center;">@employee.DaysWorked</td>
                                <td style="font-weight: 900; color: var(--color-teal);">‚Ç±@employee.ServiceCharge.ToString("N2")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</div>

<!-- Edit Payroll Modal -->
@if (ShowEditModal)
{
    <div class="modal-overlay" @onclick="CloseModals">
        <div class="modal-content" style="max-width: 800px;" @onclick:stopPropagation="true">
            <div class="modal-header-teal">
                <h2 style="margin:0; font-size:1.4rem;">Edit Payroll - @SelectedRecord?.EmployeeName</h2>
            </div>

            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 16px; margin-bottom: 16px;">
                <div class="form-group">
                    <label class="form-label">Basic Salary</label>
                    <input type="number" class="form-input" @bind="SelectedRecord.BasicSalary" />
                </div>
                <div class="form-group">
                    <label class="form-label">Overtime Pay</label>
                    <input type="number" class="form-input" @bind="SelectedRecord.Overtime" />
                </div>
            </div>

            <div style="background: var(--color-cream); padding: 16px; border-radius: 8px; margin-bottom: 16px;">
                <h3 style="margin-top: 0; color: var(--color-dark-teal); font-weight: 900; font-size: 1.1rem;">Deductions</h3>
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 12px;">
                    <div class="form-group">
                        <label class="form-label">SSS</label>
                        <input type="number" class="form-input" @bind="SelectedRecord.SSSDeduction" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">PhilHealth</label>
                        <input type="number" class="form-input" @bind="SelectedRecord.PhilHealthDeduction" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Pag-IBIG</label>
                        <input type="number" class="form-input" @bind="SelectedRecord.PagIbigDeduction" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Withholding Tax</label>
                        <input type="number" class="form-input" @bind="SelectedRecord.WithholdingTax" />
                    </div>
                </div>
            </div>

            <div style="background: var(--color-white); padding: 16px; border-radius: 8px; border: 2px solid var(--color-teal); margin-bottom: 20px;">
                <div style="display: flex; justify-content: space-between; font-size: 1.2rem;">
                    <span style="font-weight: 900; color: var(--color-dark-teal);">NET PAY:</span>
                    <span style="font-weight: 900; color: var(--color-teal);">‚Ç±@CalculateNetPay(SelectedRecord).ToString("N2")</span>
                </div>
            </div>

            <div style="display: flex; gap: 12px;">
                <button class="btn-primary" style="flex: 1;" @onclick="SavePayroll">Save Changes</button>
                <button class="btn-secondary" style="flex: 1;" @onclick="CloseModals">Cancel</button>
            </div>
        </div>
    </div>
}

@code {
    private List<PayrollRecord> PayrollRecords = new List<PayrollRecord>();
    private PayrollRecord? SelectedRecord;
    private string SearchText = "";
    private string DepartmentFilter = "";
    private string EmployeeTypeFilter = "";
    private string SelectedPeriod = "December 1-15, 2025";
    private string PayrollType = "Regular Payroll";
    private bool ShowEditModal = false;

    private decimal TotalGrossPay => PayrollRecords.Sum(p => p.BasicSalary + p.Overtime + p.ServiceCharge);
    private decimal TotalDeductions => PayrollRecords.Sum(p => p.TotalDeductions);
    private decimal NetPayroll => TotalGrossPay - TotalDeductions;
    private decimal TotalServiceChargeCollected = 47500;
    private int RankAndFileCount => PayrollRecords.Count(p => p.EmployeeType == "Rank & File");
    private decimal ServiceChargePerEmployee => RankAndFileCount > 0 ? TotalServiceChargeCollected / RankAndFileCount : 0;

    private List<PayrollRecord> FilteredPayroll => PayrollRecords
        .Where(p => (string.IsNullOrEmpty(SearchText) ||
                     p.EmployeeName.Contains(SearchText, StringComparison.OrdinalIgnoreCase) ||
                     p.EmployeeId.Contains(SearchText, StringComparison.OrdinalIgnoreCase)) &&
                    (string.IsNullOrEmpty(DepartmentFilter) || p.Department == DepartmentFilter) &&
                    (string.IsNullOrEmpty(EmployeeTypeFilter) || p.EmployeeType == EmployeeTypeFilter))
        .OrderBy(p => p.EmployeeName)
        .ToList();

