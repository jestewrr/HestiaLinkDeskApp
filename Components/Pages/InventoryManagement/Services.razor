</style>

@code {
    private string SearchText = "";
    private string FilterCategory = "";
    private bool ShowModal = false;
    private bool ShowArchivedModal = false;
    private bool ShowArchiveConfirm = false;
    private bool IsEditMode = false;
    private int NextId = 1;

    private HospitalityService CurrentService = new();
    private HospitalityService ArchiveTarget = new();
    
    private List<HospitalityService> ServicesList = new()
    {
        new() { Id = 1, Name = "Room Service", CategoryId = 1, Price = 250.00m, Description = "24/7 food and beverage delivery to your room", Status = "Active" },
        new() { Id = 2, Name = "Laundry Service", CategoryId = 2, Price = 150.00m, Description = "Professional washing, ironing, and dry cleaning", Status = "Active" },
        new() { Id = 3, Name = "Spa Treatment", CategoryId = 3, Price = 800.00m, Description = "Relaxing massage and wellness services", Status = "Active" },
        new() { Id = 4, Name = "Airport Transfer", CategoryId = 4, Price = 500.00m, Description = "Pick-up and drop-off service", Status = "Active" },
        new() { Id = 5, Name = "Mini Bar", CategoryId = 1, Price = 100.00m, Description = "In-room refreshments and snacks", Status = "Active" }
    };

    private List<ServiceCategoryItem> Categories = new()
    {
        new() { ServiceCategoryID = 1, ServiceCategoryName = "Food & Beverage" },
        new() { ServiceCategoryID = 2, ServiceCategoryName = "Housekeeping" },
        new() { ServiceCategoryID = 3, ServiceCategoryName = "Wellness" },
        new() { ServiceCategoryID = 4, ServiceCategoryName = "Transportation" },
        new() { ServiceCategoryID = 5, ServiceCategoryName = "Entertainment" }
    };

    protected override void OnInitialized()
    {
        NextId = ServicesList.Any() ? ServicesList.Max(s => s.Id) + 1 : 1;
    }

    private void OnSearchChanged(ChangeEventArgs e)
    {
        SearchText = e.Value?.ToString() ?? string.Empty;
    }

    private List<HospitalityService> FilteredServices
    {
        get
        {
            var query = ServicesList.Where(s => s.Status == "Active").AsQueryable();

            if (!string.IsNullOrWhiteSpace(SearchText))
            {
                query = query.Where(s => s.Name.Contains(SearchText, StringComparison.OrdinalIgnoreCase) ||
                                         s.Description.Contains(SearchText, StringComparison.OrdinalIgnoreCase) ||
                                         s.Id.ToString().Contains(SearchText));
            }

            if (!string.IsNullOrWhiteSpace(FilterCategory) && int.TryParse(FilterCategory, out var catId))
            {
                query = query.Where(s => s.CategoryId == catId);
            }

            return query.OrderBy(s => s.Name).ToList();
        }
    }

    private List<HospitalityService> ArchivedServices => ServicesList.Where(s => s.Status == "Archived").OrderBy(s => s.Name).ToList();
    private int ArchivedServicesCount => ArchivedServices.Count;

    private string GetCategoryName(int categoryId)
    {
        return Categories.FirstOrDefault(c => c.ServiceCategoryID == categoryId)?.ServiceCategoryName ?? "Uncategorized";
    }

    private void OpenModal()
    {
        CurrentService = new HospitalityService { Status = "Active" };
        IsEditMode = false;
        ShowModal = true;
    }

    private void CloseModal() { ShowModal = false; }

    private void OpenEditModal(HospitalityService service)
    {
        CurrentService = new HospitalityService
        {
            Id = service.Id,
            Name = service.Name,
            CategoryId = service.CategoryId,
            Price = service.Price,
            Description = service.Description,
            Status = service.Status
        };
        IsEditMode = true;
        ShowModal = true;
    }

    private void SaveService()
    {
        if (string.IsNullOrWhiteSpace(CurrentService.Name))
        {
            return;
        }

        if (CurrentService.Price <= 0)
        {
            return;
        }

        if (IsEditMode)
        {
            var existing = ServicesList.FirstOrDefault(s => s.Id == CurrentService.Id);
            if (existing != null)
            {
                existing.Name = CurrentService.Name;
                existing.CategoryId = CurrentService.CategoryId;
                existing.Price = CurrentService.Price;
                existing.Description = CurrentService.Description;
            }
        }
        else
        {
            CurrentService.Id = NextId++;
            ServicesList.Add(CurrentService);
        }

        CloseModal();
    }

    private void ArchiveService(HospitalityService service)
    {
        ArchiveTarget = service;
        ShowArchiveConfirm = true;
    }

    private void CancelArchive()
    {
        ShowArchiveConfirm = false;
        ArchiveTarget = new HospitalityService();
    }

    private void ConfirmArchive()
    {
        var service = ServicesList.FirstOrDefault(s => s.Id == ArchiveTarget.Id);
        if (service != null)
        {
            service.Status = "Archived";
        }
        
        ShowArchiveConfirm = false;
        ArchiveTarget = new HospitalityService();
    }

    private void OpenArchivedModal()
    {
        ShowArchivedModal = true;
    }

    private void CloseArchivedModal()
    {
        ShowArchivedModal = false;
    }

    private void RestoreService(HospitalityService service)
    {
        var existing = ServicesList.FirstOrDefault(s => s.Id == service.Id);
        if (existing != null)
        {
            existing.Status = "Active";
        }
    }

    public class HospitalityService
    {
        public int Id { get; set; }
        public string Name { get; set; } = "";
        public int CategoryId { get; set; }
        public decimal Price { get; set; }
        public string Description { get; set; } = "";
        public string Status { get; set; } = "Active";
    }

    public class ServiceCategoryItem
    {
        public int ServiceCategoryID { get; set; }
        public string ServiceCategoryName { get; set; } = "";
    }
}
