</style>

@code {
    private List<ServiceCategory> Categories = new List<ServiceCategory>();
    private ServiceCategory CurrentCategory = new ServiceCategory();
    private int NextId = 1;

    private void AddCategory()
    {
        if (string.IsNullOrWhiteSpace(CurrentCategory.Name))
        {
            return;
        }

        CurrentCategory.Id = NextId++;
        Categories.Add(CurrentCategory);
        CurrentCategory = new ServiceCategory();
    }

    private void OpenEditModal(ServiceCategory category)
    {
        CurrentCategory = new ServiceCategory
        {
            Id = category.Id,
            Name = category.Name,
            Description = category.Description
        };
    }

    private void ArchiveCategory(ServiceCategory category)
    {
        Categories.Remove(category);
    }

    private void SwitchMode()
    {
        // Toggle between different modes (e.g., view/edit)
        // Placeholder for future implementation
    }

    private void ClearForm()
    {
        CurrentCategory = new ServiceCategory();
    }

    public class ServiceCategory
    {
        public int Id { get; set; }
        public string Name { get; set; } = "";
        public string Description { get; set; } = "";
    }
}
