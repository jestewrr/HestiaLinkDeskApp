@page "/inventory/services"
@using Microsoft.EntityFrameworkCore
@using System.Globalization
@inject IJSRuntime JSRuntime
@inject HestiaLinkContext DbContext
@layout MainLayout

<div class="page-wrapper">
    <header class="page-topbar">
        <h1>Services</h1>
        <span class="page-topbar-subtitle">Manage Services</span>
    </header>

    @* ===== SUMMARY CARDS (show only when loaded and no error) ===== *@
    @if (IsLoaded && !HasError)
    {
        <div class="summary-cards">
            <div class="summary-card">
                <div class="summary-label">TOTAL SERVICES</div>
                <div class="summary-value">@ServicesList.Count</div>
            </div>

            <div class="summary-card">
                <div class="summary-label">CATEGORIES</div>
                <div class="summary-value">@ActiveCategories.Count</div>
            </div>

            <div class="summary-card">
                <div class="summary-label">AVG. PRICE</div>
                <div class="summary-value">
                    @(
                                    ServicesList.Any()
                                    ? "?" + ServicesList.Average(s => s.StandardPrice).ToString("N2", CultureInfo.InvariantCulture)
                                    : "?0.00"
                                    )
                </div>
            </div>

            <div class="summary-card">
                <div class="summary-label">INACTIVE</div>
                <div class="summary-value">@InactiveServicesCount</div>
            </div>
        </div>
    }

    <div class="user-toolbar">
        <div class="toolbar-left">
            <div class="toolbar-search">
                <input type="text" placeholder="Search by name or ID..." @bind="SearchText" @oninput="OnSearchChanged" />
                <span class="search-icon"></span>
            </div>
            <select class="filter-select" @bind="FilterStatus">
                <option value="All">All</option>
                <option value="Active">Active</option>
                <option value="Inactive">Inactive</option>
            </select>
        </div>
        <div>
            <button class="btn-secondary" style="margin-right:10px;" @onclick="OpenInactiveModal"> View Inactive (@InactiveServicesCount)</button>
            <button class="btn-create" @onclick="OpenModal">+ Create New Service</button>
        </div>
    </div>

    @if (!IsLoaded)
    {
        <div class="loading"> Loading services...</div>
    }
    else if (HasError)
    {
        <div class="error-message">
            <h4>? Database Error</h4>
            <p>@ErrorMessage</p>
            <button class="btn-primary" @onclick="RetryLoad">Retry</button>
        </div>
    }
    else
    {
        <div class="panel-card">
            <div class="panel-body user-list-container">
                @if (FilteredServices.Any())
                {
                    <table class="user-table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Service Name</th>
                                <th>Category</th>
                                <th>Standard Price</th>
                                <th>Status</th>
                                <th style="text-align:center;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var service in FilteredServices)
                            {
                                <tr>
                                    <td style="font-family:monospace; font-weight:700;">@service.ServiceID</td>
                                    <td style="font-weight:600;">@service.ServiceName</td>
                                    <td>@(service.Category?.ServiceCategoryName ?? "-")</td>
                                    <td>@service.StandardPrice.ToString("C", CultureInfo.InvariantCulture)</td>
                                    <td><span class="badge-@(service.Status == "Active" ? "active" : "inactive")">@service.Status</span></td>
                                    <td style="text-align:center;">
                                        @if (service.Status != "Inactive")
                                        {
                                            <div style="display:flex; justify-content:center; gap:8px; align-items:center;">
                                                <button class="btn-icon-action edit" @onclick="() => OpenEditModal(service)" title="Edit">
                                                    <svg viewBox="0 0 24 24"><path d="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z"/></svg>
                                                </button>
                                                <button class="btn-icon-action archive" @onclick="() => SetInactiveService(service)" title="Set Inactive">
                                                    <svg viewBox="0 0 24 24"><path d="M20.54 5.23l-1.39-1.68C18.88 3.21 18.47 3 18 3H6c-.47 0-.88.21-1.16.55L3.46 5.23C3.17 5.57 3 6.02 3 6.5V19c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V6.5c0-.48-.17-.93-.46-1.27zM6.24 5h11.52l.81.97H5.44l.8-.97zM5 19V8h14v11H5zm8.45-9h-2.9v3H8l4 4 4-4h-2.55z"/></svg>
                                                </button>
                                            </div>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="no-data">No services found</div>
                }
            </div>
        </div>
    }
</div>

@if (ShowModal)
{
    <div class="modal-overlay">
        <div class="modal-content" style="max-width: 600px;">
            <div class="modal-header-teal">
                <h2 style="margin:0; font-size:1.4rem;">@(IsEditMode ? "Edit Service" : "Create New Service")</h2>
            </div>

            <div class="form-grid">
                <div class="form-group full-width">
                    <label class="form-label">Service Name *</label>
                    <input type="text" class="form-input" @bind="CurrentService.ServiceName" placeholder="Enter service name" />
                </div>

                <div class="form-group full-width">
                    <label class="form-label">Service Category *</label>
                    <select class="form-select" @bind="CurrentService.ServiceCategoryID">
                        <option value="">Select Category</option>
                        @foreach (var category in ActiveCategories)
                        {
                            <option value="@category.ServiceCategoryID">@category.ServiceCategoryName</option>
                        }
                    </select>
                </div>

                <div class="form-group full-width">
                    <label class="form-label">Standard Price *</label>
                    <input type="number" step="0.01" class="form-input" @bind="CurrentService.StandardPrice" placeholder="0.00" />
                </div>

                @if (IsEditMode)
                {
                    <div class="form-group">
                        <label class="form-label">Status</label>
                        <select class="form-select" @bind="CurrentService.Status">
                            <option value="Active">Active</option>
                            <option value="Inactive">Inactive</option>
                        </select>
                    </div>
                }
            </div>

            <div class="action-footer" style="border:none; padding-bottom:0; margin-top:10px;">
                <button class="btn-primary" @onclick="SaveService">@(IsEditMode ? "Update Service" : "Create Service")</button>
                <button class="btn-secondary" @onclick="CloseModal">Cancel</button>
            </div>
        </div>
    </div>
}

@if (ShowInactiveModal)
{
    <div class="modal-overlay">
        <div class="modal-content" style="max-width: 800px;">
            <div class="modal-header-teal">
                <h2 style="margin:0; font-size:1.4rem;"> Inactive Services</h2>
                <div style="font-size: 0.9rem; color: #64748b;">@InactiveServices.Count inactive services</div>
            </div>

            <div class="panel-body" style="max-height:60vh; overflow-y:auto;">
                @if (InactiveServices.Any())
                {
                    <table class="user-table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Service Name</th>
                                <th>Category</th>
                                <th>Standard Price</th>
                                <th style="text-align:center;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var service in InactiveServices)
                            {
                                <tr>
                                    <td>@service.ServiceID</td>
                                    <td style="font-weight:700;">@service.ServiceName</td>
                                    <td>@(service.Category?.ServiceCategoryName ?? "-")</td>
                                    <td>@service.StandardPrice.ToString("C", CultureInfo.InvariantCulture)</td>
                                    <td style="text-align:center;">
                                        <button class="btn-secondary" style="background:#10b981;" @onclick="() => RestoreService(service)"> Activate</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="no-data" style="padding:40px;">No inactive services</div>
                }
            </div>

            <div class="action-footer" style="border:none; padding-bottom:0; margin-top:10px;">
                <button class="btn-secondary" @onclick="CloseInactiveModal">Close</button>
            </div>
        </div>
    </div>
}

@if (ShowSetInactiveConfirm)
{
    <div class="modal-overlay">
        <div class="modal-content" style="max-width: 420px;">
            <div class="modal-header-teal">
                <h2 style="margin:0; font-size:1.2rem;">Confirm Set Inactive</h2>
            </div>
            <div style="padding: 20px;">
                <p>Are you sure you want to set service <strong>@SetInactiveTarget?.ServiceName</strong> to inactive?</p>
                <p style="color: #f59e0b; font-size: 0.9rem;">Inactive services will not appear in active lists but can be activated later.</p>
            </div>
            <div class="action-footer" style="border:none; padding-bottom:0;">
                <button type="button" class="btn-secondary" style="background:#f59e0b;" @onclick="ConfirmSetInactive">Set Inactive</button>
                <button type="button" class="btn-secondary" @onclick="CancelSetInactive">Cancel</button>
            </div>
        </div>
    </div>
}

@code {
    private string SearchText = "";
    private string FilterStatus = "Active";
    private bool ShowModal = false;
    private bool ShowInactiveModal = false;
    private bool IsEditMode = false;
    private bool IsLoaded = false;
    private bool HasError = false;
    private string ErrorMessage = string.Empty;

    private HestiaLink.Models.Service CurrentService = new();
    private List<HestiaLink.Models.Service> ServicesList = new();
    private List<ServiceCategory> ActiveCategories = new();

    private HestiaLink.Models.Service SetInactiveTarget = new();
    private bool ShowSetInactiveConfirm = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        try
        {
            HasError = false;
            ErrorMessage = string.Empty;

            // Load services with category information
            ServicesList = await DbContext.Services
                .Include(s => s.Category)
                .OrderBy(s => s.ServiceName)
                .ToListAsync();

            // Load active categories for dropdown
            ActiveCategories = await DbContext.ServiceCategories
                .Where(c => c.Status == "Active")
                .OrderBy(c => c.ServiceCategoryName)
                .ToListAsync();

            IsLoaded = true;
        }
        catch (Exception ex)
        {
            HasError = true;
            ErrorMessage = ex.Message;
            await JSRuntime.InvokeVoidAsync("alert", $"Database Error: {ex.Message}");
            IsLoaded = true;
        }
    }

    private async Task RetryLoad()
    {
        IsLoaded = false;
        StateHasChanged();
        await Task.Delay(500);
        await LoadData();
    }

    private void OnSearchChanged(ChangeEventArgs e)
    {
        SearchText = e.Value?.ToString() ?? string.Empty;
    }

    private List<HestiaLink.Models.Service> FilteredServices
    {
        get
        {
            var query = ServicesList.AsQueryable();
            if (!string.IsNullOrWhiteSpace(SearchText))
            {
                query = query.Where(s => s.ServiceName.Contains(SearchText, StringComparison.OrdinalIgnoreCase) ||
                                         s.ServiceID.ToString().Contains(SearchText) ||
                                         (s.Category != null && s.Category.ServiceCategoryName.Contains(SearchText, StringComparison.OrdinalIgnoreCase)));
            }

            if (FilterStatus == "Active")
                query = query.Where(s => s.Status == "Active");
            else if (FilterStatus == "Inactive")
                query = query.Where(s => s.Status == "Inactive");

            return query.OrderBy(s => s.ServiceName).ToList();
        }
    }

    private List<HestiaLink.Models.Service> InactiveServices => ServicesList.Where(s => s.Status == "Inactive").ToList();
    private int InactiveServicesCount => InactiveServices.Count;

    private void OpenModal()
    {
        CurrentService = new HestiaLink.Models.Service
        {
            Status = "Active",
            StandardPrice = 0,
            IsActive = true
        };
        IsEditMode = false;
        ShowModal = true;
    }

    private void CloseModal() { ShowModal = false; }

    private void OpenEditModal(HestiaLink.Models.Service service)
    {
        CurrentService = new HestiaLink.Models.Service
        {
            ServiceID = service.ServiceID,
            ServiceName = service.ServiceName,
            ServiceCategoryID = service.ServiceCategoryID,
            StandardPrice = service.StandardPrice,
            IsActive = service.IsActive,
            Status = service.Status,
            CreatedAt = service.CreatedAt,
            UpdatedAt = service.UpdatedAt
        };
        IsEditMode = true;
        ShowModal = true;
    }

    private async Task SaveService()
    {
        try
        {
            if (string.IsNullOrWhiteSpace(CurrentService.ServiceName))
            {
                await JSRuntime.InvokeVoidAsync("alert", "Service Name is required");
                return;
            }

            if (CurrentService.ServiceCategoryID == 0)
            {
                await JSRuntime.InvokeVoidAsync("alert", "Service Category is required");
                return;
            }

            if (CurrentService.StandardPrice < 0)
            {
                await JSRuntime.InvokeVoidAsync("alert", "Standard Price must be a positive number");
                return;
            }

            if (IsEditMode)
            {
                var existing = await DbContext.Services.FirstOrDefaultAsync(s => s.ServiceID == CurrentService.ServiceID);
                if (existing != null)
                {
                    existing.ServiceName = CurrentService.ServiceName;
                    existing.ServiceCategoryID = CurrentService.ServiceCategoryID;
                    existing.StandardPrice = CurrentService.StandardPrice;
                    existing.IsActive = CurrentService.IsActive;
                    existing.Status = CurrentService.Status;
                    existing.UpdatedAt = DateTime.UtcNow;
                    DbContext.Services.Update(existing);
                    await DbContext.SaveChangesAsync();
                }
            }
            else
            {
                CurrentService.CreatedAt = DateTime.UtcNow;
                CurrentService.UpdatedAt = DateTime.UtcNow;
                CurrentService.IsActive = true;
                CurrentService.Status = "Active";
                DbContext.Services.Add(CurrentService);
                await DbContext.SaveChangesAsync();
            }

            await LoadData();
            CloseModal();
            await JSRuntime.InvokeVoidAsync("alert", "Service saved successfully");
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error saving service: {ex.Message}");
        }
    }

    private void SetInactiveService(HestiaLink.Models.Service service)
    {
        SetInactiveTarget = service;
        ShowSetInactiveConfirm = true;
    }

    private void CancelSetInactive()
    {
        ShowSetInactiveConfirm = false;
        SetInactiveTarget = new HestiaLink.Models.Service();
    }

    private async Task ConfirmSetInactive()
    {
        try
        {
            var service = await DbContext.Services.FirstOrDefaultAsync(s => s.ServiceID == SetInactiveTarget.ServiceID);
            if (service != null)
            {
                service.Status = "Inactive";
                service.IsActive = false;
                service.UpdatedAt = DateTime.UtcNow;
                DbContext.Services.Update(service);
                await DbContext.SaveChangesAsync();
                await LoadData();
                await JSRuntime.InvokeVoidAsync("alert", "Service set to inactive");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error setting service to inactive: {ex.Message}");
        }
        finally
        {
            ShowSetInactiveConfirm = false;
            SetInactiveTarget = new HestiaLink.Models.Service();
        }
    }

    private void OpenInactiveModal()
    {
        ShowInactiveModal = true;
    }

    private void CloseInactiveModal()
    {
        ShowInactiveModal = false;
    }

    private async Task RestoreService(HestiaLink.Models.Service service)
    {
        try
        {
            var existing = await DbContext.Services.FirstOrDefaultAsync(s => s.ServiceID == service.ServiceID);
            if (existing != null)
            {
                existing.Status = "Active";
                existing.IsActive = true;
                existing.UpdatedAt = DateTime.UtcNow;
                DbContext.Services.Update(existing);
                await DbContext.SaveChangesAsync();
                await LoadData();
                await JSRuntime.InvokeVoidAsync("alert", "Service activated");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error activating service: {ex.Message}");
        }
    }
}

