@page "/inventory/items"
@using Microsoft.EntityFrameworkCore
@using System.Globalization
@using HestiaLink.Models
@using HestiaLink.Data
@using HestiaLink.Services
@inject IJSRuntime JSRuntime
@inject HestiaLinkContext DbContext
@inject InventoryService InventoryService
@layout MainLayout

<div class="page-wrapper">
    <header class="page-topbar">
        <h1>Inventory Items</h1>
        <span class="page-topbar-subtitle">Manage Inventory Items</span>
    </header>

    @* ===== SUMMARY CARDS ===== *@
    @if (IsLoaded && !HasError)
    {
        <div class="summary-cards">
            <div class="summary-card">
                <div class="summary-label">TOTAL ITEMS</div>
                <div class="summary-value">@InventoryItems.Count(i => i.IsActive == true)</div>
            </div>

            <div class="summary-card">
                <div class="summary-label">LOW STOCK</div>
                <div class="summary-value" style="color: #b91c1c;">@InventoryItems.Count(i => i.IsActive == true && (i.CurrentStock ?? 0) <= (i.ReorderPoint ?? 0))</div>
            </div>

            <div class="summary-card">
                <div class="summary-label">CATEGORIES</div>
                <div class="summary-value">@InventoryItems.Where(i => i.IsActive == true).Select(i => i.Category).Distinct().Count()</div>
            </div>

            <div class="summary-card">
                <div class="summary-label">TOTAL VALUE</div>
                <div class="summary-value">?@InventoryItems.Where(i => i.IsActive == true).Sum(i => (i.CurrentStock ?? 0) * i.UnitCost).ToString("N0")</div>
            </div>
        </div>
    }

    <div class="user-toolbar">
        <div class="toolbar-left">
            <div class="toolbar-search">
                <input type="text" placeholder="Search by name, code, or category..." @bind="SearchText" @oninput="OnSearchChanged" />
                <span class="search-icon"></span>
            </div>
            <select class="filter-select" @bind="FilterCategory">
                <option value="">All Categories</option>
                @foreach (var category in Categories)
                {
                    <option value="@category">@category</option>
                }
            </select>
            <select class="filter-select" @bind="FilterStatus">
                <option value="Active">Active</option>
                <option value="All">All</option>
                <option value="Inactive">Inactive</option>
                <option value="LowStock">Low Stock</option>
            </select>
        </div>
        <div>
            <button class="btn-secondary" style="margin-right:10px;" @onclick="OpenInactiveModal">View Inactive (@InactiveItemsCount)</button>
            <button class="btn-create" @onclick="OpenModal">+ Add Inventory Item</button>
        </div>
    </div>

    @if (!IsLoaded)
    {
        <div class="loading">Loading inventory items...</div>
    }
    else if (HasError)
    {
        <div class="error-message">
            <h4>?? Database Error</h4>
            <p>@ErrorMessage</p>
            <button class="btn-primary" @onclick="RetryLoad">Retry</button>
        </div>
    }
    else
    {
        <div class="panel-card">
            <div class="panel-body user-list-container">
                @if (FilteredItems.Any())
                {
                    <table class="user-table">
                        <thead>
                            <tr>
                                <th>Code</th>
                                <th>Item Name</th>
                                <th>Category</th>
                                <th>Supplier</th>
                                <th>Unit</th>
                                <th>Unit Cost</th>
                                <th>Current Stock</th>
                                <th>Reorder Point</th>
                                <th>Status</th>
                                <th style="text-align:center;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in FilteredItems)
                            {
                                var currentStock = item.CurrentStock ?? 0;
                                var reorderPoint = item.ReorderPoint ?? 0;
                                <tr class="@(currentStock <= reorderPoint ? "low-stock-row" : "")">
                                    <td style="font-family:monospace; font-weight:700;">@item.ItemCode</td>
                                    <td style="font-weight:600;">@item.ItemName</td>
                                    <td><span class="category-badge">@item.Category</span></td>
                                    <td>@(item.Supplier?.SupplierName ?? "-")</td>
                                    <td>@item.UnitOfMeasure</td>
                                    <td>?@item.UnitCost.ToString("N2")</td>
                                    <td>
                                        @if (currentStock <= reorderPoint)
                                        {
                                            <span class="stock-badge critical">@currentStock</span>
                                        }
                                        else
                                        {
                                            <span class="stock-badge normal">@currentStock</span>
                                        }
                                    </td>
                                    <td>@reorderPoint</td>
                                    <td>
                                        @if (item.IsActive != true)
                                        {
                                            <span class="badge-inactive">Inactive</span>
                                        }
                                        else if (currentStock == 0)
                                        {
                                            <span class="badge-outofstock">Out of Stock</span>
                                        }
                                        else if (currentStock <= reorderPoint)
                                        {
                                            <span class="badge-lowstock">Low Stock</span>
                                        }
                                        else
                                        {
                                            <span class="badge-active">In Stock</span>
                                        }
                                    </td>
                                    <td style="text-align:center;">
                                        @if (item.IsActive == true)
                                        {
                                            <div style="display:flex; justify-content:center; gap:8px; align-items:center;">
                                                <button class="btn-icon-action edit" @onclick="() => OpenEditModal(item)" title="Edit">
                                                    <svg viewBox="0 0 24 24"><path d="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z"/></svg>
                                                </button>
                                                <button class="btn-icon-action stock" @onclick="() => OpenStockAdjustModal(item)" title="Adjust Stock">
                                                    <svg viewBox="0 0 24 24"><path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-5 14h-2v-4H8v-2h4V7h2v4h4v2h-4v4z"/></svg>
                                                </button>
                                                <button class="btn-icon-action archive" @onclick="() => SetInactiveItem(item)" title="Set Inactive">
                                                    <svg viewBox="0 0 24 24"><path d="M20.54 5.23l-1.39-1.68C18.88 3.21 18.47 3 18 3H6c-.47 0-.88.21-1.16.55L3.46 5.23C3.17 5.57 3 6.02 3 6.5V19c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V6.5c0-.48-.17-.93-.46-1.27zM6.24 5h11.52l.81.97H5.44l.8-.97zM5 19V8h14v11H5zm8.45-9h-2.9v3H8l4 4 4-4h-2.55z"/></svg>
                                                </button>
                                            </div>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="no-data">No inventory items found</div>
                }
            </div>
        </div>
    }
</div>

@* ===== CREATE/EDIT MODAL ===== *@
@if (ShowModal)
{
    <div class="modal-overlay">
        <div class="modal-content" style="max-width: 700px;">
            <div class="modal-header-teal">
                <h2 style="margin:0; font-size:1.4rem;">@(IsEditMode ? "Edit Inventory Item" : "Add New Inventory Item")</h2>
            </div>

            <div class="form-grid">
                <div class="form-group">
                    <label class="form-label">Item Code *</label>
                    <input type="text" class="form-input" @bind="CurrentItem.ItemCode" placeholder="e.g., COF-001" />
                </div>

                <div class="form-group">
                    <label class="form-label">Item Name *</label>
                    <input type="text" class="form-input" @bind="CurrentItem.ItemName" placeholder="Enter item name" />
                </div>

                <div class="form-group">
                    <label class="form-label">Category *</label>
                    <select class="form-select" @bind="CurrentItem.Category">
                        <option value="">Select Category</option>
                        <option value="FOOD">Food</option>
                        <option value="BEVERAGE">Beverage</option>
                        <option value="AMENITY">Amenity</option>
                        <option value="CLEANING">Cleaning</option>
                        <option value="MAINTENANCE">Maintenance</option>
                        <option value="LINENS">Linens</option>
                        <option value="OTHER">Other</option>
                    </select>
                </div>

                <div class="form-group">
                    <label class="form-label">Supplier</label>
                    <select class="form-select" @bind="EditSupplierID">
                        <option value="0">No Supplier</option>
                        @foreach (var supplier in Suppliers)
                        {
                            <option value="@supplier.SupplierID">@supplier.SupplierCode - @supplier.SupplierName</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <label class="form-label">Unit of Measure *</label>
                    <select class="form-select" @bind="CurrentItem.UnitOfMeasure">
                        <option value="">Select Unit</option>
                        <option value="PC">Piece (PC)</option>
                        <option value="KG">Kilogram (KG)</option>
                        <option value="G">Gram (G)</option>
                        <option value="L">Liter (L)</option>
                        <option value="ML">Milliliter (ML)</option>
                        <option value="BOX">Box</option>
                        <option value="SET">Set</option>
                        <option value="PACK">Pack</option>
                        <option value="ROLL">Roll</option>
                        <option value="BOTTLE">Bottle</option>
                    </select>
                </div>

                <div class="form-group">
                    <label class="form-label">Unit Cost (?) *</label>
                    <input type="number" step="0.01" class="form-input" @bind="CurrentItem.UnitCost" placeholder="0.00" />
                </div>

                <div class="form-group">
                    <label class="form-label">Current Stock *</label>
                    <input type="number" class="form-input" @bind="EditCurrentStock" placeholder="0" />
                </div>

                <div class="form-group">
                    <label class="form-label">Reorder Point</label>
                    <input type="number" class="form-input" @bind="EditReorderPoint" placeholder="10" />
                </div>
            </div>

            <div class="action-footer" style="border:none; padding-bottom:0; margin-top:10px;">
                <button class="btn-primary" @onclick="SaveItem">@(IsEditMode ? "Update Item" : "Add Item")</button>
                <button class="btn-secondary" @onclick="CloseModal">Cancel</button>
            </div>
        </div>
    </div>
}

@* ===== STOCK ADJUSTMENT MODAL ===== *@
@if (ShowStockModal)
{
    <div class="modal-overlay">
        <div class="modal-content" style="max-width: 500px;">
            <div class="modal-header-teal">
                <h2 style="margin:0; font-size:1.4rem;">Adjust Stock: @StockAdjustItem.ItemName</h2>
            </div>

            <div style="padding: 20px;">
                <div class="stock-info">
                    <div class="stock-info-item">
                        <span class="stock-info-label">Current Stock:</span>
                        <span class="stock-info-value">@(StockAdjustItem.CurrentStock ?? 0) @StockAdjustItem.UnitOfMeasure</span>
                    </div>
                </div>

                <div class="form-group" style="margin-top: 20px;">
                    <label class="form-label">Adjustment Type *</label>
                    <select class="form-select" @bind="AdjustmentType">
                        <option value="Add">Add Stock (Received)</option>
                        <option value="Subtract">Remove Stock (Used/Lost)</option>
                        <option value="Set">Set Exact Amount</option>
                    </select>
                </div>

                <div class="form-group">
                    <label class="form-label">@(AdjustmentType == "Set" ? "New Stock Amount" : "Quantity") *</label>
                    <input type="number" class="form-input" @bind="AdjustmentQuantity" placeholder="Enter quantity" />
                </div>

                @if (AdjustmentType != "Set")
                {
                    var stockAdjustCurrentStock = StockAdjustItem.CurrentStock ?? 0;
                    <div class="stock-preview">
                        <span>New Stock Amount:</span>
                        <span class="stock-preview-value">
                            @(AdjustmentType == "Add"
                                ? (stockAdjustCurrentStock + AdjustmentQuantity)
                                : Math.Max(0, stockAdjustCurrentStock - AdjustmentQuantity))
                            @StockAdjustItem.UnitOfMeasure
                        </span>
                    </div>
                }
            </div>

            <div class="action-footer" style="border:none; padding-bottom:0;">
                <button class="btn-primary" @onclick="SaveStockAdjustment">Confirm Adjustment</button>
                <button class="btn-secondary" @onclick="CloseStockModal">Cancel</button>
            </div>
        </div>
    </div>
}

@* ===== INACTIVE ITEMS MODAL ===== *@
@if (ShowInactiveModal)
{
    <div class="modal-overlay">
        <div class="modal-content" style="max-width: 800px;">
            <div class="modal-header-teal">
                <h2 style="margin:0; font-size:1.4rem;">Inactive Inventory Items</h2>
                <div style="font-size: 0.9rem; color: #64748b;">@InactiveItems.Count inactive items</div>
            </div>

            <div class="panel-body" style="max-height:60vh; overflow-y:auto;">
                @if (InactiveItems.Any())
                {
                    <table class="user-table">
                        <thead>
                            <tr>
                                <th>Code</th>
                                <th>Item Name</th>
                                <th>Category</th>
                                <th>Last Stock</th>
                                <th style="text-align:center;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in InactiveItems)
                            {
                                <tr>
                                    <td style="font-family:monospace;">@item.ItemCode</td>
                                    <td style="font-weight:700;">@item.ItemName</td>
                                    <td>@item.Category</td>
                                    <td>@(item.CurrentStock ?? 0) @item.UnitOfMeasure</td>
                                    <td style="text-align:center;">
                                        <button class="btn-secondary" style="background:#10b981;" @onclick="() => RestoreItem(item)">Activate</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="no-data" style="padding:40px;">No inactive items</div>
                }
            </div>

            <div class="action-footer" style="border:none; padding-bottom:0; margin-top:10px;">
                <button class="btn-secondary" @onclick="CloseInactiveModal">Close</button>
            </div>
        </div>
    </div>
}

@* ===== SET INACTIVE CONFIRMATION MODAL ===== *@
@if (ShowSetInactiveConfirm)
{
    <div class="modal-overlay">
        <div class="modal-content" style="max-width: 420px;">
            <div class="modal-header-teal">
                <h2 style="margin:0; font-size:1.2rem;">Confirm Set Inactive</h2>
            </div>
            <div style="padding: 20px;">
                <p>Are you sure you want to set <strong>@SetInactiveTarget?.ItemName</strong> to inactive?</p>
                <p style="color: #f59e0b; font-size: 0.9rem;">Inactive items will not appear in active lists but can be activated later.</p>
            </div>
            <div class="action-footer" style="border:none; padding-bottom:0;">
                <button type="button" class="btn-secondary" style="background:#f59e0b;" @onclick="ConfirmSetInactive">Set Inactive</button>
                <button type="button" class="btn-secondary" @onclick="CancelSetInactive">Cancel</button>
            </div>
        </div>
    </div>
}

@code {
    // State
    private string SearchText = "";
    private string FilterCategory = "";
    private string FilterStatus = "Active";
    private bool ShowModal = false;
    private bool ShowStockModal = false;
    private bool ShowInactiveModal = false;
    private bool ShowSetInactiveConfirm = false;
    private bool IsEditMode = false;
    private bool IsLoaded = false;
    private bool HasError = false;
    private string ErrorMessage = string.Empty;

    // Data
    private InventoryItem CurrentItem = new();
    private InventoryItem StockAdjustItem = new();
    private InventoryItem? SetInactiveTarget;
    private List<InventoryItem> InventoryItems = new();
    private List<Supplier> Suppliers = new();
    private List<string> Categories = new();

    // Edit form helpers for nullable fields
    private int EditCurrentStock = 0;
    private int EditReorderPoint = 10;
    private int EditSupplierID = 0;

    // Stock adjustment
    private string AdjustmentType = "Add";
    private int AdjustmentQuantity = 0;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        try
        {
            HasError = false;
            ErrorMessage = string.Empty;

            InventoryItems = await DbContext.InventoryItems
                .Include(i => i.Supplier)
                .OrderBy(i => i.ItemName)
                .ToListAsync();

            Suppliers = await InventoryService.GetActiveSuppliersAsync();

            Categories = InventoryItems
                .Where(i => i.IsActive == true)
                .Select(i => i.Category)
                .Distinct()
                .OrderBy(c => c)
                .ToList();

            IsLoaded = true;
        }
        catch (Exception ex)
        {
            HasError = true;
            ErrorMessage = ex.Message;
            IsLoaded = true;
        }
    }

    private async Task RetryLoad()
    {
        IsLoaded = false;
        StateHasChanged();
        await Task.Delay(500);
        await LoadData();
    }

    private void OnSearchChanged(ChangeEventArgs e)
    {
        SearchText = e.Value?.ToString() ?? string.Empty;
    }

    private List<InventoryItem> FilteredItems
    {
        get
        {
            var query = InventoryItems.AsQueryable();

            // Search filter
            if (!string.IsNullOrWhiteSpace(SearchText))
            {
                query = query.Where(i =>
                    i.ItemName.Contains(SearchText, StringComparison.OrdinalIgnoreCase) ||
                    i.ItemCode.Contains(SearchText, StringComparison.OrdinalIgnoreCase) ||
                    i.Category.Contains(SearchText, StringComparison.OrdinalIgnoreCase));
            }

            // Category filter
            if (!string.IsNullOrEmpty(FilterCategory))
            {
                query = query.Where(i => i.Category == FilterCategory);
            }

            // Status filter
            if (FilterStatus == "Active")
                query = query.Where(i => i.IsActive == true);
            else if (FilterStatus == "Inactive")
                query = query.Where(i => i.IsActive != true);
            else if (FilterStatus == "LowStock")
                query = query.Where(i => i.IsActive == true && (i.CurrentStock ?? 0) <= (i.ReorderPoint ?? 0));

            return query.OrderBy(i => i.ItemName).ToList();
        }
    }

    private List<InventoryItem> InactiveItems => InventoryItems.Where(i => i.IsActive != true).ToList();
    private int InactiveItemsCount => InactiveItems.Count;

    // Modal handlers
    private void OpenModal()
    {
        CurrentItem = new InventoryItem
        {
            ItemCode = GenerateItemCode(),
            IsActive = true
        };
        EditCurrentStock = 0;
        EditReorderPoint = 10;
        EditSupplierID = 0;
        IsEditMode = false;
        ShowModal = true;
    }

    private void OpenEditModal(InventoryItem item)
    {
        CurrentItem = new InventoryItem
        {
            ItemID = item.ItemID,
            ItemCode = item.ItemCode,
            ItemName = item.ItemName,
            Category = item.Category,
            UnitOfMeasure = item.UnitOfMeasure,
            UnitCost = item.UnitCost,
            IsActive = item.IsActive,
            CreatedDate = item.CreatedDate,
            SupplierID = item.SupplierID
        };
        EditCurrentStock = item.CurrentStock ?? 0;
        EditReorderPoint = item.ReorderPoint ?? 10;
        EditSupplierID = item.SupplierID ?? 0;
        IsEditMode = true;
        ShowModal = true;
    }

    private void CloseModal() => ShowModal = false;

    private void OpenStockAdjustModal(InventoryItem item)
    {
        StockAdjustItem = item;
        AdjustmentType = "Add";
        AdjustmentQuantity = 0;
        ShowStockModal = true;
    }

    private void CloseStockModal() => ShowStockModal = false;

    private void OpenInactiveModal() => ShowInactiveModal = true;
    private void CloseInactiveModal() => ShowInactiveModal = false;

    private void SetInactiveItem(InventoryItem item)
    {
        SetInactiveTarget = item;
        ShowSetInactiveConfirm = true;
    }

    private void CancelSetInactive()
    {
        ShowSetInactiveConfirm = false;
        SetInactiveTarget = null;
    }

    private string GenerateItemCode()
    {
        var random = new Random();
        return $"ITM-{random.Next(1000, 9999)}";
    }

    // Save operations
    private async Task SaveItem()
    {
        try
        {
            // Validation
            if (string.IsNullOrWhiteSpace(CurrentItem.ItemCode))
            {
                await JSRuntime.InvokeVoidAsync("alert", "Item Code is required");
                return;
            }

            if (string.IsNullOrWhiteSpace(CurrentItem.ItemName))
            {
                await JSRuntime.InvokeVoidAsync("alert", "Item Name is required");
                return;
            }

            if (string.IsNullOrWhiteSpace(CurrentItem.Category))
            {
                await JSRuntime.InvokeVoidAsync("alert", "Category is required");
                return;
            }

            if (string.IsNullOrWhiteSpace(CurrentItem.UnitOfMeasure))
            {
                await JSRuntime.InvokeVoidAsync("alert", "Unit of Measure is required");
                return;
            }

            if (CurrentItem.UnitCost < 0)
            {
                await JSRuntime.InvokeVoidAsync("alert", "Unit Cost must be positive");
                return;
            }

            // Check for duplicate ItemCode
            var existingCode = await DbContext.InventoryItems
                .FirstOrDefaultAsync(i => i.ItemCode == CurrentItem.ItemCode && i.ItemID != CurrentItem.ItemID);
            if (existingCode != null)
            {
                await JSRuntime.InvokeVoidAsync("alert", "Item Code already exists. Please use a different code.");
                return;
            }

            if (IsEditMode)
            {
                var existing = await DbContext.InventoryItems.FirstOrDefaultAsync(i => i.ItemID == CurrentItem.ItemID);
                if (existing != null)
                {
                    existing.ItemCode = CurrentItem.ItemCode;
                    existing.ItemName = CurrentItem.ItemName;
                    existing.Category = CurrentItem.Category;
                    existing.UnitOfMeasure = CurrentItem.UnitOfMeasure;
                    existing.UnitCost = CurrentItem.UnitCost;
                    existing.CurrentStock = EditCurrentStock;
                    existing.ReorderPoint = EditReorderPoint;
                    existing.SupplierID = EditSupplierID > 0 ? EditSupplierID : null;
                    DbContext.InventoryItems.Update(existing);
                    await DbContext.SaveChangesAsync();
                }
            }
            else
            {
                CurrentItem.CreatedDate = DateTime.Now;
                CurrentItem.IsActive = true;
                CurrentItem.CurrentStock = EditCurrentStock;
                CurrentItem.ReorderPoint = EditReorderPoint;
                CurrentItem.SupplierID = EditSupplierID > 0 ? EditSupplierID : null;
                DbContext.InventoryItems.Add(CurrentItem);
                await DbContext.SaveChangesAsync();
            }

            await LoadData();
            CloseModal();
            await JSRuntime.InvokeVoidAsync("alert", IsEditMode ? "Item updated successfully" : "Item added successfully");
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error saving item: {ex.Message}");
        }
    }

    private async Task SaveStockAdjustment()
    {
        try
        {
            if (AdjustmentQuantity < 0)
            {
                await JSRuntime.InvokeVoidAsync("alert", "Quantity must be positive");
                return;
            }

            var item = await DbContext.InventoryItems.FirstOrDefaultAsync(i => i.ItemID == StockAdjustItem.ItemID);
            if (item != null)
            {
                var currentStock = item.CurrentStock ?? 0;
                int newStock = AdjustmentType switch
                {
                    "Add" => currentStock + AdjustmentQuantity,
                    "Subtract" => Math.Max(0, currentStock - AdjustmentQuantity),
                    "Set" => AdjustmentQuantity,
                    _ => currentStock
                };

                item.CurrentStock = newStock;
                DbContext.InventoryItems.Update(item);
                await DbContext.SaveChangesAsync();

                await LoadData();
                CloseStockModal();
                await JSRuntime.InvokeVoidAsync("alert", $"Stock updated to {newStock} {item.UnitOfMeasure}");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error adjusting stock: {ex.Message}");
        }
    }

    private async Task ConfirmSetInactive()
    {
        try
        {
            if (SetInactiveTarget == null) return;

            var item = await DbContext.InventoryItems.FirstOrDefaultAsync(i => i.ItemID == SetInactiveTarget.ItemID);
            if (item != null)
            {
                item.IsActive = false;
                DbContext.InventoryItems.Update(item);
                await DbContext.SaveChangesAsync();
                await LoadData();
                await JSRuntime.InvokeVoidAsync("alert", "Item set to inactive");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error: {ex.Message}");
        }
        finally
        {
            ShowSetInactiveConfirm = false;
            SetInactiveTarget = null;
        }
    }

    private async Task RestoreItem(InventoryItem item)
    {
        try
        {
            var existing = await DbContext.InventoryItems.FirstOrDefaultAsync(i => i.ItemID == item.ItemID);
            if (existing != null)
            {
                existing.IsActive = true;
                DbContext.InventoryItems.Update(existing);
                await DbContext.SaveChangesAsync();
                await LoadData();
