@page "/inventory/alerts"
@using Microsoft.EntityFrameworkCore
@inject IJSRuntime JSRuntime
@inject HestiaLinkContext DbContext
@layout MainLayout

<div class="page-wrapper">
    <div class="page-topbar">
        <div>
            <h1>Inventory Alerts</h1>
            <div class="page-topbar-subtitle">Low Stock Warnings & Reorder Suggestions</div>
        </div>
        <div class="page-topbar-date">@DateTime.Now.ToString("MMMM dd, yyyy")</div>
    </div>

    <div class="page-content">
        @if (IsLoaded)
        {
            @* ===== SUMMARY CARDS ===== *@
            <div class="summary-cards">
                <div class="summary-card danger">
                    <div class="summary-label">OUT OF STOCK</div>
                    <div class="summary-value">@OutOfStockCount</div>
                    <div class="summary-desc">Items with 0 quantity</div>
                </div>

                <div class="summary-card danger">
                    <div class="summary-label">LOW STOCK</div>
                    <div class="summary-value">@LowStockCount</div>
                    <div class="summary-desc">Items below reorder point</div>
                </div>

                <div class="summary-card">
                    <div class="summary-label">NEAR REORDER</div>
                    <div class="summary-value">@NearReorderCount</div>
                    <div class="summary-desc">Items within 10% of reorder</div>
                </div>

                <div class="summary-card">
                    <div class="summary-label">WELL STOCKED</div>
                    <div class="summary-value">@WellStockedCount</div>
                    <div class="summary-desc">Items above threshold</div>
                </div>
            </div>

            @* ===== NOTIFICATIONS ===== *@
            @if (OutOfStockCount > 0)
            {
                <div class="alert-banner critical">
                    <span class="alert-icon">‚ö†Ô∏è</span>
                    <span class="alert-msg"><strong>Action Required:</strong> @OutOfStockCount items are completely out of stock!</span>
                </div>
            }

            @* ===== LOW STOCK GRID ===== *@
            <div class="panel-card full-width">
                <div class="panel-header warning">
                    <h3>‚ö†Ô∏è Low Stock - Reorder Recommended</h3>
                    <span class="header-badge">@LowStockItems.Count items</span>
                </div>
                <div class="panel-body">
                    @if (LowStockItems.Any())
                    {
                        <table class="inventory-table">
                            <thead>
                                <tr>
                                    <th>Code</th>
                                    <th>Item Name</th>
                                    <th>Category</th>
                                    <th>Current Stock</th>
                                    <th>Reorder Point</th>
                                    <th>Suggested Order</th>
                                    <th>Est. Cost</th>
                                    <th style="text-align:right;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in LowStockItems)
                                {
                                    var orderQty = Math.Max((item.ReorderPoint ?? 0) * 2 - (item.CurrentStock ?? 0), 0);
                                    var estCost = orderQty * item.UnitCost;
                                    <tr>
                                        <td class="mono">@item.ItemCode</td>
                                        <td class="fw-bold">@item.ItemName</td>
                                        <td><span class="category-badge">@item.Category</span></td>
                                        <td><span class="stock-badge critical">@(item.CurrentStock ?? 0) @item.UnitOfMeasure</span></td>
                                        <td>@(item.ReorderPoint ?? 0)</td>
                                        <td class="fw-bold" style="color:#0f766e;">@orderQty @item.UnitOfMeasure</td>
                                        <td>‚Ç±@estCost.ToString("N2")</td>
                                        <td style="text-align:right;">
                                            <button class="btn-sm-primary" @onclick="() => PrintReorder(item)">Restock</button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="no-data">‚úÖ No low stock alerts. Inventory is healthy!</div>
                    }
                </div>
            </div>

            <div class="dashboard-grid" style="margin-top:24px;">
                @* ===== REORDER SUMMARY ===== *@
                <div class="panel-card reorder-summary-panel">
                    <div class="panel-header" style="background:transparent; border:none; padding-bottom:0;">
                        <h3 style="color:white; font-size:1.5rem;">üìã Reorder Summary</h3>
                    </div>
                    <div class="reorder-stats">
                        <div class="reorder-stat">
                            <span class="stat-val">@LowStockCount</span>
                            <span class="stat-label">Items to Reorder</span>
                        </div>
                        <div class="reorder-stat">
                            <span class="stat-val">‚Ç±@TotalReorderCost.ToString("N0")</span>
                            <span class="stat-label">Estimated Total Cost</span>
                        </div>
                    </div>
                    <div class="panel-footer" style="padding:20px;">
                        <button class="btn-white-outline" @onclick="ExportReorderList">üìÑ Export Reorder List</button>
                    </div>
                </div>
            </div>
        }
        else
        {
             <div class="loading">Loading alerts...</div>
        }
    </div>
</div>

@code {
    private bool IsLoaded = false;
    private List<InventoryItem> AllItems = new();
    private List<InventoryItem> LowStockItems = new();
    
    // Stats
    private int OutOfStockCount = 0;
    private int LowStockCount = 0;
    private int NearReorderCount = 0;
    private int WellStockedCount = 0;
    private decimal TotalReorderCost = 0;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        IsLoaded = false;
        await Task.Delay(300); // Simulate loading

        AllItems = await DbContext.InventoryItems.Where(i => i.IsActive == true).ToListAsync();

        // Categorize
        var lowStock = new List<InventoryItem>();
        int outStock = 0;
        int near = 0;
        int well = 0;
        decimal totalEstCost = 0;

        foreach (var item in AllItems)
        {
            var stock = item.CurrentStock ?? 0;
            var point = item.ReorderPoint ?? 0;

            if (stock == 0)
            {
                outStock++;
                lowStock.Add(item);
                totalEstCost += (Math.Max(point * 2, 10) * item.UnitCost);
            }
            else if (stock <= point)
            {
                lowStock.Add(item);
                var qty = Math.Max(point * 2 - stock, 0);
                totalEstCost += (qty * item.UnitCost);
            }
            else if (stock <= point * 1.25m) // Near reorder (within 25%)
            {
                near++;
            }
            else
            {
                well++;
            }
        }

        LowStockItems = lowStock.OrderBy(i => i.CurrentStock).ToList();
        OutOfStockCount = outStock;
        LowStockCount = LowStockItems.Count;
        NearReorderCount = near;
        WellStockedCount = well;
        TotalReorderCost = totalEstCost;

        IsLoaded = true;
    }

    private async Task PrintReorder(InventoryItem item)
    {
        await JSRuntime.InvokeVoidAsync("alert", $"Restock request initiated for {item.ItemName}");
    }

    private async Task ExportReorderList()
    {
        await JSRuntime.InvokeVoidAsync("alert", "Exporting reorder list to PDF...");
    }
}

