@page "/housekeeping/room-status"
@using HestiaLink.Data
@using HestiaLink.Models
@using Microsoft.EntityFrameworkCore
@inject HestiaLinkContext DbContext
@inject NavigationManager Navigation

<div class="page-wrapper">
    <div class="page-topbar">
        <div>
            <h1>Room Status</h1>
            <div class="page-topbar-subtitle">Manage room cleanliness and availability</div>
        </div>
        <div class="page-topbar-date">@DateTime.Now.ToString("MMMM dd, yyyy")</div>
    </div>

    <div class="page-content">
        <!-- Filter/Actions -->
        <div class="toolbar" style="display:flex; justify-content:space-between; align-items:center; gap:16px; margin-bottom:18px;">
            <div style="display:flex; gap:12px; align-items:center;">
                <div class="search-box" style="width: 320px;">
                    <span class="search-icon">🔍</span>
                    <input placeholder="Search Room..." @bind="SearchTerm" @bind:event="oninput" />
                </div>
                <select class="filter-select" @bind="FilterStatus" style="width: 200px;">
                    <option value="">All Statuses</option>
                    <option value="Available">Available</option>
                    <option value="Occupied">Occupied</option>
                    <option value="Dirty">Dirty</option>
                    <option value="Maintenance">Maintenance</option>
                </select>
            </div>
            
            <div style="display:flex; gap:12px; align-items:center;">
                <a href="/housekeeping/cleaning-schedule" class="btn-primary" style="text-decoration: none; padding: 11px 20px; font-size: 0.9rem; white-space: nowrap;">Cleaning Schedule</a>

                <button class="btn-primary" @onclick="LoadRooms" style="padding: 11px 20px; font-size: 0.9rem;">Refresh</button>
            </div>
        </div>

        <!-- Room Grid -->
        <div class="cards-grid">
            @if (FilteredRooms == null)
            {
                <p>Loading...</p>
            }
            else if (!FilteredRooms.Any())
            {
                <p>No rooms found.</p>
            }
            else
            {
                @foreach (var room in FilteredRooms)
                {
                    <div class="user-card">
                        <div class="card-top" style="margin-bottom:12px;">
                            <div class="card-title">
                                Room @room.RoomNumber <span style="font-weight:400; color:#64748b; font-size:0.95rem;">(Floor @room.Floor)</span>
                            </div>
                            <div class="status-badge @GetStatusBadgeClass(room.Status)">
                                @room.Status.ToUpper()
                            </div>
                        </div>

                        <div class="card-body" style="gap:4px; margin-bottom:16px;">
                            <div style="font-size:0.95rem; color:#334155;">
                                <span style="font-weight:600; color:#0f172a; min-width:80px; display:inline-block;">Type:</span> 
                                @(room.RoomType?.TypeName ?? "-")
                            </div>
                             <div style="font-size:0.95rem; color:#334155;">
                                <span style="font-weight:600; color:#0f172a; min-width:80px; display:inline-block;">Status:</span> 
                                @room.Status
                            </div>
                        </div>
                        
                        <div class="card-actions" style="margin-top:auto; display:flex; gap:8px;">
                            @if (room.Status == "Dirty" || room.Status == "For Cleaning")
                            {
                                <button class="btn-primary" style="flex:1; padding: 8px; font-size: 0.85rem;" @onclick="() => MarkAvailable(room)">Mark Clean</button>
                                <button class="btn-secondary" style="flex:1; padding: 8px; font-size: 0.85rem;" @onclick="() => MarkMaintenance(room)">Maint.</button>
                            }
                            else if (room.Status == "Available")
                            {
                                <button class="btn-secondary" style="flex:1; padding: 8px; font-size: 0.85rem;" @onclick="() => MarkDirty(room)">Mark Dirty</button>
                                <button class="btn-secondary" style="flex:1; padding: 8px; font-size: 0.85rem;" @onclick="() => MarkMaintenance(room)">Maint.</button>
                            }
                            else if (room.Status == "Maintenance")
                            {
                                <button class="btn-primary" style="width:100%; padding: 8px; font-size: 0.85rem;" @onclick="() => MarkAvailable(room)">Finish Maintenance</button>
                            }
                            else if (room.Status == "Occupied")
                            {
                                <div style="text-align:center; width:100%; font-size:0.85rem; color:#64748b; font-style:italic;">
                                    Occupied by Guest
                                </div>
                            }
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>

@code {
    private List<Room> Rooms = new();
    private string SearchTerm = "";
    private string FilterStatus = "";

    private IEnumerable<Room> FilteredRooms => Rooms
        .Where(r => string.IsNullOrEmpty(SearchTerm) || r.RoomNumber.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase))
        .Where(r => string.IsNullOrEmpty(FilterStatus) || r.Status == FilterStatus);

    protected override async Task OnInitializedAsync()
    {
        await LoadRooms();
    }

    private async Task LoadRooms()
    {
        Rooms = await DbContext.Rooms.Include(r => r.RoomType).ToListAsync();
    }

    private async Task UpdateStatus(Room room, string newStatus)
    {
        room.Status = newStatus;
        DbContext.Rooms.Update(room);
        await DbContext.SaveChangesAsync();
        // Refresh local list if needed, or just let UI update since it's bound
    }

    private async Task MarkAvailable(Room room) => await UpdateStatus(room, "Available");
    private async Task MarkDirty(Room room) => await UpdateStatus(room, "Dirty");
    private async Task MarkMaintenance(Room room) => await UpdateStatus(room, "Maintenance");

    private string GetStatusBadgeClass(string status)
    {
        return status?.ToLower() switch
        {
            "available" => "badge-available",
            "occupied" => "badge-occupied",
            "dirty" => "badge-dirty",
            "for cleaning" => "badge-dirty",
            "maintenance" => "badge-maintenance",
            _ => "badge-available"
        };
    }
}
