    {
        // Export to Excel logic
    }

    private void OpenEditModal(PayrollRecord record)
    {
        SelectedRecord = record;
        ShowEditModal = true;
    }

    private void ViewPayslip(PayrollRecord record)
    {
        // View/print payslip logic
    }

    private void SavePayroll()
    {
        if (SelectedRecord != null)
        {
            SelectedRecord.TotalDeductions = SelectedRecord.SSSDeduction + SelectedRecord.PhilHealthDeduction + 
                                            SelectedRecord.PagIbigDeduction + SelectedRecord.WithholdingTax;
            SelectedRecord.NetPay = CalculateNetPay(SelectedRecord);
        }
        CloseModals();
    }

    private decimal CalculateNetPay(PayrollRecord? record)
    {
        if (record == null) return 0;
        return record.BasicSalary + record.Overtime + record.ServiceCharge - 
               (record.SSSDeduction + record.PhilHealthDeduction + record.PagIbigDeduction + record.WithholdingTax);
    }

    private void CloseModals()
    {
        ShowEditModal = false;
        SelectedRecord = null;
    }

    public class PayrollRecord
    {
        public string EmployeeId { get; set; } = "";
        public string EmployeeName { get; set; } = "";
        public string Department { get; set; } = "";
        public string Position { get; set; } = "";
        public string EmployeeType { get; set; } = "";
        public decimal BasicSalary { get; set; }
