@code {
    private List<Room> RoomsForCleaning = new();
    private List<Room> RoomsUnderMaintenance = new();
    private List<CleaningTask> ActiveTasks = new();
    private List<SystemUser> AvailableHousekeepers = new();

    private string ActiveTab = "cleaning";
    private bool ShowAssignModal = false;
    private bool ShowAdminCompleteModal = false;
    private bool IsLoaded = false;
    private bool HasError = false;
    private bool IsProcessing = false;
    private string ErrorMessage = string.Empty;

    private Room? SelectedRoom;
    private CleaningTask? SelectedTask;
    private int SelectedUserID = 0;
    private string TaskNotes = "Standard Cleaning";

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private string GetAvatarInitials(string roomNumber)
    {
        if (string.IsNullOrWhiteSpace(roomNumber)) return "RM";
        var trimmed = roomNumber.Trim();
        return trimmed.Length <= 2 ? trimmed : trimmed[..2];
    }

    private async Task LoadData()
    {
        try
        {
            HasError = false;
            ErrorMessage = string.Empty;
            IsLoaded = false;
            StateHasChanged();

            RoomsForCleaning = await HousekeepingService.GetRoomsForCleaningAsync();
            RoomsUnderMaintenance = await HousekeepingService.GetRoomsUnderMaintenanceAsync();
            ActiveTasks = await HousekeepingService.GetActiveTasksAsync();
            AvailableHousekeepers = await HousekeepingService.GetAvailableHousekeepersAsync();

            IsLoaded = true;
        }
        catch (Exception ex)
        {
            HasError = true;
            ErrorMessage = ex.Message;
            IsLoaded = true;
        }

        StateHasChanged();
    }

    private void SwitchTab(string tab) => ActiveTab = tab;

    private async Task OpenAssignModal(Room room)
    {
        SelectedRoom = room;
        SelectedUserID = 0;
        TaskNotes = "Standard Cleaning";

        try
        {
            AvailableHousekeepers = await HousekeepingService.GetAvailableHousekeepersAsync();
        }
        catch { }

        ShowAssignModal = true;
        StateHasChanged();
    }

    private void CloseAssignModal()
    {
        ShowAssignModal = false;
        SelectedRoom = null;
        SelectedUserID = 0;
    }

    private async Task SaveAssignment()
    {
        if (SelectedRoom == null || SelectedUserID == 0 || IsProcessing) return;

        try
        {
            IsProcessing = true;
            StateHasChanged();

            var result = await HousekeepingService.AssignTaskAsync(
                SelectedRoom.RoomID,
                SelectedUserID,
                TaskNotes);

            if (result.Success)
            {
                CloseAssignModal();
                await LoadData();
                await JSRuntime.InvokeVoidAsync("alert", "Task assigned successfully!");
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("alert", result.Message);
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error: {ex.Message}");
        }
        finally
        {
            IsProcessing = false;
            StateHasChanged();
        }
    }

    private void AdminCompleteTask(CleaningTask task)
    {
        SelectedTask = task;
        ShowAdminCompleteModal = true;
    }

    private void CloseAdminCompleteModal()
    {
        ShowAdminCompleteModal = false;
        SelectedTask = null;
    }

    private async Task ConfirmAdminComplete()
    {
        if (SelectedTask == null || IsProcessing) return;

        try
        {
            IsProcessing = true;
            StateHasChanged();

            var userId = SelectedTask.UserID ?? 0;
            if (userId == 0)
            {
                await JSRuntime.InvokeVoidAsync("alert", "Cannot complete: No user assigned");
                return;
            }

            var result = await HousekeepingService.CompleteTaskAsync(SelectedTask.TaskID, userId, "Cleaned");

            CloseAdminCompleteModal();

            if (result.Success)
            {
                await LoadData();
                await JSRuntime.InvokeVoidAsync("alert", "Task completed!");
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("alert", result.Message);
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error: {ex.Message}");
        }
        finally
        {
            IsProcessing = false;
            StateHasChanged();
        }
    }

    private async Task ResolveMaintenanceRoom(Room room)
    {
        try
        {
            IsProcessing = true;
            StateHasChanged();

            var success = await HousekeepingService.UpdateRoomStatusAsync(room.RoomID, "Available");

            if (success)
            {
                await LoadData();
                await JSRuntime.InvokeVoidAsync("alert", $"Room {room.RoomNumber} is now available!");
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("alert", "Failed to update room status.");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error: {ex.Message}");
        }
        finally
        {
            IsProcessing = false;
            StateHasChanged();
        }
    }
}