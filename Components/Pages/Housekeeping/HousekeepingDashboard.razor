@code {
    private List<CleaningTask> ActiveTasks = new();
    private List<CleaningTask> TaskHistory = new();

    private bool IsLoaded = false;
    private bool HasError = false;
    private bool IsProcessing = false;
    private string ErrorMessage = string.Empty;

    private bool ShowCompletionModal = false;
    private bool ShowMaintenanceModal = false;
    private CleaningTask? SelectedTask = null;
    private string MaintenanceNotes = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        if (!UserSession.IsAuthenticated)
        {
            Navigation.NavigateTo("/loginpage");
            return;
        }

        await LoadData();
    }

    private string GetAvatarInitials(string roomNumber)
    {
        if (string.IsNullOrWhiteSpace(roomNumber)) return "RM";
        var trimmed = roomNumber.Trim();
        return trimmed.Length <= 2 ? trimmed : trimmed[..2];
    }

    private async Task LoadData()
    {
        try
        {
            HasError = false;
            ErrorMessage = string.Empty;
            IsLoaded = false;
            StateHasChanged();

            var userId = UserSession.UserID;

            ActiveTasks = await HousekeepingService.GetUserTasksAsync(userId, activeOnly: true);
            TaskHistory = await HousekeepingService.GetUserTaskHistoryAsync(userId);

            IsLoaded = true;
        }
        catch (Exception ex)
        {
            HasError = true;
            ErrorMessage = ex.Message;
            IsLoaded = true;
        }

        StateHasChanged();
    }

    private async Task StartTask(CleaningTask task)
    {
        if (IsProcessing) return;

        try
        {
            IsProcessing = true;
            StateHasChanged();

            var result = await HousekeepingService.StartTaskAsync(task.TaskID, UserSession.UserID);

            if (result.Success)
            {
                await LoadData();
                await JSRuntime.InvokeVoidAsync("alert", "Task started!");
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("alert", result.Message);
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error: {ex.Message}");
        }
        finally
        {
            IsProcessing = false;
            StateHasChanged();
        }
    }

    private void OpenCompletionModal(CleaningTask task)
    {
        SelectedTask = task;
        ShowCompletionModal = true;
    }

    private void OpenMaintenanceModal(CleaningTask task)
    {
        SelectedTask = task;
        MaintenanceNotes = string.Empty;
        ShowMaintenanceModal = true;
    }

    private void CloseModals()
    {
        ShowCompletionModal = false;
        ShowMaintenanceModal = false;
        SelectedTask = null;
        MaintenanceNotes = string.Empty;
    }

    private async Task ConfirmCompletion()
    {
        if (SelectedTask == null || IsProcessing) return;

        try
        {
            IsProcessing = true;
            StateHasChanged();

            var result = await HousekeepingService.CompleteTaskAsync(
                SelectedTask.TaskID,
                UserSession.UserID,
                "Cleaned");

            CloseModals();

            if (result.Success)
            {
                await LoadData();
                await JSRuntime.InvokeVoidAsync("alert", "Room cleaned!");
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("alert", result.Message);
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error: {ex.Message}");
        }
        finally
        {
            IsProcessing = false;
            StateHasChanged();
        }
    }

    private async Task ConfirmMaintenance()
    {
        if (SelectedTask == null || IsProcessing) return;

        try
        {
            IsProcessing = true;
            StateHasChanged();

            var result = await HousekeepingService.CompleteTaskAsync(
                SelectedTask.TaskID,
                UserSession.UserID,
                "Maintenance Required");

            CloseModals();

            if (result.Success)
            {
                await LoadData();
                await JSRuntime.InvokeVoidAsync("alert", "Issue reported!");
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("alert", result.Message);
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error: {ex.Message}");
        }
        finally
        {
            IsProcessing = false;
            StateHasChanged();
        }
    }
}
