@page "/inventory/services"
@layout MainLayout

<div class="page-wrapper">
    <header class="page-topbar">
        <h1>Services</h1>
        <span class="page-topbar-subtitle">Hospitality Services Management</span>
    </header>

    <section class="page-content">

    <!-- Stats Cards -->
    <div style="display: grid; grid-template-columns: repeat(4, 1fr); gap: 16px; margin-bottom: 24px;">
        <div class="stat-card">
            <div class="stat-title">Total Services</div>
            <div class="stat-value">@ServicesList.Count(s => s.Status == "Active")</div>
        </div>
        <div class="stat-card">
            <div class="stat-title">Categories</div>
            <div class="stat-value">@Categories.Count</div>
        </div>
        <div class="stat-card">
            <div class="stat-title">Avg. Price</div>
            <div class="stat-value">‚Ç±@(ServicesList.Any() ? ServicesList.Where(s => s.Status == "Active").Average(s => s.Price).ToString("N2") : "0.00")</div>
        </div>
        <div class="stat-card">
            <div class="stat-title">Archived</div>
            <div class="stat-value">@ArchivedServicesCount</div>
        </div>
    </div>

    <!-- Toolbar -->
    <div class="user-toolbar">
        <div class="toolbar-left">
            <div class="toolbar-search">
                <input type="text" placeholder="Search services..." @bind="SearchText" @oninput="OnSearchChanged" />
                <span class="search-icon">üîç</span>
            </div>
            <select class="filter-select" @bind="FilterCategory">
                <option value="">All Categories</option>
                @foreach (var cat in Categories)
                {
                    <option value="@cat.ServiceCategoryID">@cat.ServiceCategoryName</option>
                }
            </select>
        </div>
        <div>
            <button class="btn-secondary" style="margin-right:10px;" @onclick="OpenArchivedModal">üìÅ View Archived (@ArchivedServicesCount)</button>
            <button class="btn-create" @onclick="OpenModal">+ Add New Service</button>
        </div>
    </div>

    <!-- Services Table -->
        <div class="panel-card">
            <div class="panel-body user-list-container">
                @if (FilteredServices.Any())
                {
                    <table class="user-table">
                        <thead>
                            <tr>
                                <th>Service ID</th>
                                <th>Service Name</th>
                                <th>Category</th>
                                <th>Price</th>
                                <th>Description</th>
                                <th>Status</th>
                                <th style="text-align:center;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var service in FilteredServices)
                            {
                                <tr>
                                    <td style="font-family:monospace; font-weight:700;">SVC-@service.Id.ToString("D4")</td>
                                    <td style="font-weight:600;">@service.Name</td>
                                    <td>
                                        <span class="badge-active" style="background: var(--color-teal); color: white; padding: 4px 12px; border-radius: 12px; font-size: 0.85rem;">
                                            @GetCategoryName(service.CategoryId)
                                        </span>
                                    </td>
                                    <td style="color:#004f59; font-weight:700;">‚Ç±@service.Price.ToString("N2")</td>
                                    <td style="max-width: 300px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">@service.Description</td>
                                    <td><span class="badge-active">@service.Status</span></td>
                                    <td style="text-align:center;">
                                        <div style="display:flex; gap:8px; justify-content:center;">
                                            <button class="btn-icon btn-icon-edit" @onclick="() => OpenEditModal(service)" title="Edit">‚úé</button>
                                            <button class="btn-icon btn-icon-archive" @onclick="() => ArchiveService(service)" title="Archive">üóÇ</button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="no-data">No services found</div>
                }
            </div>
        </div>
    </section>
</div>

<!-- Create/Edit Modal -->
@if (ShowModal)
{
    <div class="modal-overlay">
        <div class="modal-content" style="max-width: 700px;">
            <div class="modal-header-teal">
                <h2 style="margin:0; font-size:1.4rem;">@(IsEditMode ? "Edit Service" : "Add New Service")</h2>
            </div>

            <div class="form-grid">
                <div class="form-group full-width">
                    <label class="form-label">Service Name *</label>
                    <input type="text" class="form-input" @bind="CurrentService.Name" placeholder="e.g., Room Service, Laundry, Spa Treatment" />
                </div>

                <div class="form-group">
                    <label class="form-label">Category *</label>
                    <select class="form-select" @bind="CurrentService.CategoryId">
                        <option value="">Select Category</option>
                        @foreach (var cat in Categories)
                        {
                            <option value="@cat.ServiceCategoryID">@cat.ServiceCategoryName</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <label class="form-label">Price (‚Ç±) *</label>
                    <input type="number" step="0.01" class="form-input" @bind="CurrentService.Price" placeholder="0.00" />
                </div>

                <div class="form-group full-width">
                    <label class="form-label">Description</label>
                    <textarea class="form-input" rows="4" @bind="CurrentService.Description" placeholder="Enter service description"></textarea>
                </div>
            </div>

            <div class="action-footer" style="border:none; padding-bottom:0; margin-top:10px;">
                <button class="btn-create" @onclick="SaveService">@(IsEditMode ? "Update Service" : "Create Service")</button>
                <button class="btn-secondary" @onclick="CloseModal">Cancel</button>
            </div>
        </div>
    </div>
}

<!-- Archived Services Modal -->
@if (ShowArchivedModal)
{
    <div class="modal-overlay">
        <div class="modal-content" style="max-width: 900px;">
            <div class="modal-header-teal">
                <h2 style="margin:0; font-size:1.4rem;">üìÅ Archived Services</h2>
                <div style="font-size: 0.9rem; color: #64748b;">@ArchivedServices.Count archived services</div>
            </div>

            <div class="panel-body" style="max-height:60vh; overflow-y:auto;">
                @if (ArchivedServices.Any())
                {
                    <table class="user-table">
                        <thead>
                            <tr>
                                <th>Service ID</th>
                                <th>Service Name</th>
                                <th>Category</th>
                                <th>Price</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var service in ArchivedServices)
                            {
                                <tr>
                                    <td style="font-family:monospace;">SVC-@service.Id.ToString("D4")</td>
                                    <td>@service.Name</td>
                                    <td>@GetCategoryName(service.CategoryId)</td>
                                    <td>‚Ç±@service.Price.ToString("N2")</td>
                                    <td>
                                        <button class="btn-secondary" style="background:#10b981; padding:6px 12px;" @onclick="() => RestoreService(service)">Restore</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="no-data" style="padding:40px;">No archived services</div>
                }
            </div>

            <div class="action-footer" style="border:none; padding-bottom:0; margin-top:10px;">
                <button class="btn-secondary" @onclick="CloseArchivedModal">Close</button>
            </div>
        </div>
    </div>
}

<!-- Archive Confirmation Modal -->
@if (ShowArchiveConfirm)
{
    <div class="modal-overlay">
        <div class="modal-content" style="max-width: 420px;">
            <div class="modal-header-teal">
                <h2 style="margin:0; font-size:1.2rem;">Confirm Archive</h2>
            </div>
            <div style="padding: 20px;">
                <p>Are you sure you want to archive service <strong>@(ArchiveTarget?.Name)</strong>?</p>
                <p style="color: #f59e0b; font-size: 0.9rem;">Archived services will not appear in active lists but can be restored later.</p>
            </div>
            <div class="action-footer" style="border:none; padding-bottom:0;">
                <button type="button" class="btn-secondary" style="background:#f59e0b;" @onclick="ConfirmArchive">Archive</button>
                <button type="button" class="btn-secondary" @onclick="CancelArchive">Cancel</button>
            </div>
        </div>
    </div>
}

<style>
    .stat-card {
        background: white;
        border-radius: 12px;
        padding: 20px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }

