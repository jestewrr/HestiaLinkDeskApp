@page "/inventory/service-links"
@using Microsoft.EntityFrameworkCore
@using System.Globalization
@inject IJSRuntime JSRuntime
@inject HestiaLinkContext DbContext
@layout MainLayout

<div class="page-wrapper">
    <header class="page-topbar">
        <h1>Service Inventory Links</h1>
        <span class="page-topbar-subtitle">Link Services to Inventory Items</span>
    </header>

    @* ===== SUMMARY CARDS ===== *@
    @if (IsLoaded && !HasError)
    {
        <div class="summary-cards">
            <div class="summary-card">
                <div class="summary-label">SERVICES WITH INVENTORY</div>
                <div class="summary-value">@ServicesWithInventory.Count</div>
            </div>

            <div class="summary-card">
                <div class="summary-label">TOTAL LINKS</div>
                <div class="summary-value">@ServiceLinksList.Count</div>
            </div>

            <div class="summary-card">
                <div class="summary-label">AVAILABLE SERVICES</div>
                <div class="summary-value">@AllServices.Count(s => s.IsActive != null && s.IsActive.Value)</div>
            </div>

            <div class="summary-card">
                <div class="summary-label">INVENTORY ITEMS</div>
                <div class="summary-value">@AllInventoryItems.Count(i => i.IsActive != null && i.IsActive.Value)</div>
            </div>
        </div>
    }

    <div class="user-toolbar">
        <div class="toolbar-left">
            <div class="toolbar-search">
                <input type="text" placeholder="Search services..." @bind="SearchText" @oninput="OnSearchChanged" />
                <span class="search-icon"></span>
            </div>
            <select class="filter-select" @bind="FilterLinked">
                <option value="All">All Services</option>
                <option value="Linked">With Inventory Links</option>
                <option value="NoLinks">Without Links</option>
            </select>
        </div>
        <button class="btn-create" @onclick="OpenLinkModal">+ Link Service to Inventory</button>
    </div>

    @if (!IsLoaded)
    {
        <div class="loading">Loading service inventory links...</div>
    }
    else if (HasError)
    {
        <div class="error-message">
            <h4>?? Database Error</h4>
            <p>@ErrorMessage</p>
            <button class="btn-primary" @onclick="RetryLoad">Retry</button>
        </div>
    }
    else
    {
        <div class="links-grid">
            @if (FilteredServices.Any())
            {
                @foreach (var service in FilteredServices)
                {
                    var links = ServiceLinksList.Where(l => l.ServiceID == service.ServiceID).ToList();
                    <div class="service-card @(links.Any() ? "has-links" : "no-links")">
                        <div class="service-header">
                            <div class="service-info">
                                <h3>@service.ServiceName</h3>
                                <span class="service-category">@(service.Category?.ServiceCategoryName ?? "Uncategorized")</span>
                            </div>
                            <div class="service-meta">
                                <span class="service-price">?@service.StandardPrice.ToString("N2")</span>
                                @if (service.UsesInventory == true)
                                {
                                    <span class="uses-inventory-badge">Uses Inventory</span>
                                }
                            </div>
                        </div>

                        <div class="linked-items">
                            @if (links.Any())
                            {
                                <div class="items-header">
                                    <span>Linked Inventory Items (@links.Count)</span>
                                </div>
                                <table class="items-table">
                                    <thead>
                                        <tr>
                                            <th>Item</th>
                                            <th>Qty Required</th>
                                            <th>Stock</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var link in links)
                                        {
                                            <tr>
                                                <td style="font-weight:600;">
                                                    <span class="item-code">@link.InventoryItem?.ItemCode</span>
                                                    @link.InventoryItem?.ItemName
                                                </td>
                                                <td>@link.QuantityRequired @link.InventoryItem?.UnitOfMeasure</td>
                                                <td>
                                                    @{
                                                        var itemCurrentStock = link.InventoryItem?.CurrentStock ?? 0;
                                                        var itemReorderPoint = link.InventoryItem?.ReorderPoint ?? 0;
                                                    }
                                                    @if (itemCurrentStock <= itemReorderPoint)
                                                    {
                                                        <span class="stock-low">@itemCurrentStock</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="stock-ok">@itemCurrentStock</span>
                                                    }
                                                </td>
                                                <td>
                                                    <button class="btn-icon-small delete" @onclick="() => RemoveLink(link)" title="Remove Link">
                                                        ?
                                                    </button>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <div class="no-items">
                                    <span>No inventory items linked</span>
                                </div>
                            }
                        </div>

                        <div class="service-actions">
                            <button class="btn-add-item" @onclick="() => OpenAddItemModal(service)">
                                + Add Item
                            </button>
                            @if (service.UsesInventory != true && links.Any())
                            {
                                <button class="btn-enable-inventory" @onclick="() => EnableInventoryForService(service)">
                                    Enable Inventory Tracking
                                </button>
                            }
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="no-data" style="grid-column: span 2;">No services found</div>
            }
        </div>
    }
</div>

@* ===== ADD LINK MODAL ===== *@
@if (ShowLinkModal)
{
    <div class="modal-overlay">
        <div class="modal-content" style="max-width: 600px;">
            <div class="modal-header-teal">
                <h2 style="margin:0; font-size:1.4rem;">Link Service to Inventory</h2>
            </div>

            <div class="form-grid">
                <div class="form-group full-width">
                    <label class="form-label">Service *</label>
                    <select class="form-select" @bind="NewLink.ServiceID">
                        <option value="0">Select a Service</option>
                        @foreach (var service in AllServices.Where(s => s.IsActive != null && s.IsActive.Value))
                        {
                            <option value="@service.ServiceID">@service.ServiceName (?@service.StandardPrice.ToString("N2"))</option>
                        }
                    </select>
                </div>

                <div class="form-group full-width">
                    <label class="form-label">Inventory Item *</label>
                    <select class="form-select" @bind="NewLink.InventoryItemID">
                        <option value="0">Select an Item</option>
                        @foreach (var item in AllInventoryItems.Where(i => i.IsActive != null && i.IsActive.Value))
                        {
                            <option value="@item.ItemID">[@item.ItemCode] @item.ItemName (Stock: @(item.CurrentStock ?? 0) @item.UnitOfMeasure)</option>
                        }
                    </select>
                </div>

                <div class="form-group full-width">
                    <label class="form-label">Quantity Required *</label>
                    <input type="number" step="0.01" class="form-input" @bind="NewLink.QuantityRequired" placeholder="1.0" />
                </div>
            </div>

            <div class="action-footer" style="border:none; padding-bottom:0; margin-top:10px;">
                <button class="btn-primary" @onclick="SaveLink">Create Link</button>
                <button class="btn-secondary" @onclick="CloseLinkModal">Cancel</button>
            </div>
        </div>
    </div>
}

@* ===== ADD ITEM TO SERVICE MODAL ===== *@
@if (ShowAddItemModal)
{
    <div class="modal-overlay">
        <div class="modal-content" style="max-width: 550px;">
            <div class="modal-header-teal">
                <h2 style="margin:0; font-size:1.4rem;">Add Item to @SelectedService?.ServiceName</h2>
            </div>

            <div class="form-grid">
                <div class="form-group full-width">
                    <label class="form-label">Inventory Item *</label>
                    <select class="form-select" @bind="NewLink.InventoryItemID">
                        <option value="0">Select an Item</option>
                        @foreach (var item in AvailableItemsForService)
                        {
                            <option value="@item.ItemID">[@item.ItemCode] @item.ItemName (Stock: @(item.CurrentStock ?? 0) @item.UnitOfMeasure)</option>
                        }
                    </select>
                </div>

                <div class="form-group full-width">
                    <label class="form-label">Quantity Required *</label>
                    <input type="number" step="0.01" class="form-input" @bind="NewLink.QuantityRequired" placeholder="1.0" />
                </div>
            </div>

            <div class="action-footer" style="border:none; padding-bottom:0; margin-top:10px;">
                <button class="btn-primary" @onclick="SaveLinkForService">Add Item</button>
                <button class="btn-secondary" @onclick="CloseAddItemModal">Cancel</button>
            </div>
        </div>
    </div>
}

@* ===== REMOVE LINK CONFIRMATION ===== *@
@if (ShowRemoveConfirm)
{
    <div class="modal-overlay">
        <div class="modal-content" style="max-width: 420px;">
            <div class="modal-header-teal">
                <h2 style="margin:0; font-size:1.2rem;">Remove Link?</h2>
            </div>
            <div style="padding: 20px;">
                <p>Are you sure you want to remove <strong>@RemoveTarget?.InventoryItem?.ItemName</strong> from this service?</p>
                <p style="color: #64748b; font-size: 0.9rem;">This will stop automatic inventory deduction for this item when the service is used.</p>
            </div>
            <div class="action-footer" style="border:none; padding-bottom:0;">
                <button type="button" class="btn-secondary" style="background:#b91c1c;" @onclick="ConfirmRemoveLink">Remove</button>
                <button type="button" class="btn-secondary" @onclick="CancelRemove">Cancel</button>
            </div>
        </div>
    </div>
}

@code {
    // State
    private string SearchText = "";
    private string FilterLinked = "All";
    private bool ShowLinkModal = false;
    private bool ShowAddItemModal = false;
    private bool ShowRemoveConfirm = false;
    private bool IsLoaded = false;
    private bool HasError = false;
    private string ErrorMessage = string.Empty;

    // Data
    private List<HestiaLink.Models.Service> AllServices = new();
    private List<InventoryItem> AllInventoryItems = new();
    private List<ServiceInventory> ServiceLinksList = new();
    private ServiceInventory NewLink = new();
    private ServiceInventory? RemoveTarget;
    private HestiaLink.Models.Service? SelectedService;

    // Computed
    private List<HestiaLink.Models.Service> ServicesWithInventory =>
        AllServices.Where(s => ServiceLinksList.Any(l => l.ServiceID == s.ServiceID)).ToList();

    private List<InventoryItem> AvailableItemsForService
    {
        get
        {
            if (SelectedService == null) return new();
            var linkedItemIds = ServiceLinksList
                .Where(l => l.ServiceID == SelectedService.ServiceID)
                .Select(l => l.InventoryItemID)
                .ToHashSet();
            return AllInventoryItems
                .Where(i => i.IsActive != null && i.IsActive.Value && !linkedItemIds.Contains(i.ItemID))
                .ToList();
        }
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        try
        {
            HasError = false;
            ErrorMessage = string.Empty;

            AllServices = await DbContext.Services
                .Include(s => s.Category)
                .Where(s => s.IsActive != null && s.IsActive.Value)
                .OrderBy(s => s.ServiceName)
                .ToListAsync();

            AllInventoryItems = await DbContext.InventoryItems
                .OrderBy(i => i.ItemName)
                .ToListAsync();

            ServiceLinksList = await DbContext.ServiceInventories
                .Include(si => si.Service)
                .Include(si => si.InventoryItem)
                .ToListAsync();

            IsLoaded = true;
        }
        catch (Exception ex)
        {
            HasError = true;
            ErrorMessage = ex.Message;
            IsLoaded = true;
        }
    }

    private async Task RetryLoad()
    {
        IsLoaded = false;
        StateHasChanged();
        await Task.Delay(500);
        await LoadData();
    }

    private void OnSearchChanged(ChangeEventArgs e)
    {
        SearchText = e.Value?.ToString() ?? string.Empty;
    }

    private List<HestiaLink.Models.Service> FilteredServices
    {
        get
        {
            var query = AllServices.AsQueryable();

            if (!string.IsNullOrWhiteSpace(SearchText))
            {
                query = query.Where(s =>
                    s.ServiceName.Contains(SearchText, StringComparison.OrdinalIgnoreCase) ||
                    (s.Category != null && s.Category.ServiceCategoryName.Contains(SearchText, StringComparison.OrdinalIgnoreCase)));
            }

            if (FilterLinked == "Linked")
            {
                var linkedServiceIds = ServiceLinksList.Select(l => l.ServiceID).Distinct().ToHashSet();
                query = query.Where(s => linkedServiceIds.Contains(s.ServiceID));
            }
            else if (FilterLinked == "NoLinks")
            {
                var linkedServiceIds = ServiceLinksList.Select(l => l.ServiceID).Distinct().ToHashSet();
                query = query.Where(s => !linkedServiceIds.Contains(s.ServiceID));
            }

            return query.OrderBy(s => s.ServiceName).ToList();
        }
    }

    // Modal handlers
    private void OpenLinkModal()
    {
        NewLink = new ServiceInventory
        {
            QuantityRequired = 1.0m
        };
        ShowLinkModal = true;
    }

    private void CloseLinkModal() => ShowLinkModal = false;

    private void OpenAddItemModal(HestiaLink.Models.Service service)
    {
        SelectedService = service;
        NewLink = new ServiceInventory
        {
            ServiceID = service.ServiceID,
            QuantityRequired = 1.0m
        };
        ShowAddItemModal = true;
    }

    private void CloseAddItemModal()
    {
        ShowAddItemModal = false;
        SelectedService = null;
    }

    private void RemoveLink(ServiceInventory link)
    {
        RemoveTarget = link;
        ShowRemoveConfirm = true;
    }

    private void CancelRemove()
    {
        ShowRemoveConfirm = false;
        RemoveTarget = null;
    }

    // Save operations
    private async Task SaveLink()
    {
        try
        {
            if (NewLink.ServiceID == 0)
            {
                await JSRuntime.InvokeVoidAsync("alert", "Please select a service");
                return;
            }

            if (NewLink.InventoryItemID == 0)
            {
                await JSRuntime.InvokeVoidAsync("alert", "Please select an inventory item");
                return;
            }

            if (NewLink.QuantityRequired <= 0)
            {
                await JSRuntime.InvokeVoidAsync("alert", "Quantity required must be greater than 0");
                return;
            }

            // Check for duplicate link
            var exists = await DbContext.ServiceInventories
                .AnyAsync(si => si.ServiceID == NewLink.ServiceID && si.InventoryItemID == NewLink.InventoryItemID);
            if (exists)
            {
                await JSRuntime.InvokeVoidAsync("alert", "This item is already linked to the service");
                return;
            }

            NewLink.CreatedDate = DateTime.Now;
            DbContext.ServiceInventories.Add(NewLink);

            // Enable inventory for service if not already
            var service = await DbContext.Services.FirstOrDefaultAsync(s => s.ServiceID == NewLink.ServiceID);
            if (service != null && service.UsesInventory != true)
            {
                service.UsesInventory = true;
                service.UpdatedAt = DateTime.UtcNow;
            }

            await DbContext.SaveChangesAsync();
            await LoadData();
            CloseLinkModal();
            await JSRuntime.InvokeVoidAsync("alert", "Link created successfully");
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error creating link: {ex.Message}");
        }
    }

    private async Task SaveLinkForService()
    {
        try
        {
            if (SelectedService == null)
            {
                await JSRuntime.InvokeVoidAsync("alert", "Service not selected");
                return;
            }

            if (NewLink.InventoryItemID == 0)
            {
                await JSRuntime.InvokeVoidAsync("alert", "Please select an inventory item");
                return;
            }

            if (NewLink.QuantityRequired <= 0)
            {
                await JSRuntime.InvokeVoidAsync("alert", "Quantity required must be greater than 0");
                return;
            }

            NewLink.ServiceID = SelectedService.ServiceID;
            NewLink.CreatedDate = DateTime.Now;
            DbContext.ServiceInventories.Add(NewLink);

            // Enable inventory for service
            var service = await DbContext.Services.FirstOrDefaultAsync(s => s.ServiceID == SelectedService.ServiceID);
            if (service != null && service.UsesInventory != true)
            {
                service.UsesInventory = true;
                service.UpdatedAt = DateTime.UtcNow;
            }

            await DbContext.SaveChangesAsync();
            await LoadData();
            CloseAddItemModal();
            await JSRuntime.InvokeVoidAsync("alert", "Item added to service");
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error adding item: {ex.Message}");
        }
    }

    private async Task ConfirmRemoveLink()
    {
        try
        {
            if (RemoveTarget == null) return;

            var link = await DbContext.ServiceInventories.FirstOrDefaultAsync(si => si.ServiceInventoryID == RemoveTarget.ServiceInventoryID);
            if (link != null)
            {
                DbContext.ServiceInventories.Remove(link);
                await DbContext.SaveChangesAsync();

                // Check if service still has links
                var remainingLinks = await DbContext.ServiceInventories
                    .AnyAsync(si => si.ServiceID == link.ServiceID);
                if (!remainingLinks)
                {
                    var service = await DbContext.Services.FirstOrDefaultAsync(s => s.ServiceID == link.ServiceID);
                    if (service != null)
                    {
                        service.UsesInventory = false;
                        service.UpdatedAt = DateTime.UtcNow;
                        await DbContext.SaveChangesAsync();
                    }
                }

                await LoadData();
                await JSRuntime.InvokeVoidAsync("alert", "Link removed");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error removing link: {ex.Message}");
        }
        finally
        {
            ShowRemoveConfirm = false;
            RemoveTarget = null;
        }
    }

    private async Task EnableInventoryForService(HestiaLink.Models.Service service)
    {
        try
        {
            var svc = await DbContext.Services.FirstOrDefaultAsync(s => s.ServiceID == service.ServiceID);
            if (svc != null)
            {
                svc.UsesInventory = true;
                svc.UpdatedAt = DateTime.UtcNow;
                await DbContext.SaveChangesAsync();
                await LoadData();
                await JSRuntime.InvokeVoidAsync("alert", "Inventory tracking enabled for this service");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error: {ex.Message}");
        }
    }
}

