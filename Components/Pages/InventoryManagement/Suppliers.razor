@page "/inventory/suppliers"
@using Microsoft.EntityFrameworkCore
@using HestiaLink.Models
@using HestiaLink.Data
@using HestiaLink.Services
@inject HestiaLinkContext DbContext
@inject InventoryService InventoryService
@inject IJSRuntime JSRuntime
@layout MainLayout

<div class="page-wrapper">
    <header class="page-topbar">
        <h1>Suppliers</h1>
        <span class="page-topbar-subtitle">Vendor Directory</span>
    </header>

    @* ===== SUMMARY CARDS ===== *@
    @if (IsLoaded && !HasError)
    {
        <div class="summary-cards">
            <div class="summary-card">
                <div class="summary-label">TOTAL SUPPLIERS</div>
                <div class="summary-value">@SupplierList.Count(s => s.IsActive == true)</div>
            </div>

            <div class="summary-card">
                <div class="summary-label">ACTIVE ITEMS</div>
                <div class="summary-value">@TotalItemsLinked</div>
            </div>

            <div class="summary-card">
                <div class="summary-label">TOTAL SPEND (YTD)</div>
                <div class="summary-value">₱@TotalSpendYTD.ToString("N0")</div>
            </div>

            <div class="summary-card">
                <div class="summary-label">CATEGORIES</div>
                <div class="summary-value">@SupplierList.Where(s => s.IsActive == true).Select(s => s.SupplierType).Distinct().Count()</div>
            </div>
        </div>
    }

    <section class="page-content">
        <div class="user-toolbar">
            <div class="toolbar-left">
                <div class="toolbar-search">
                    <input type="text" placeholder="Search suppliers..." @bind="SearchText" @oninput="OnSearchChanged" />
                    <span class="search-icon"></span>
                </div>
                <select class="filter-select" @bind="FilterType">
                    <option value="">All Types</option>
                    @foreach (var type in SupplierTypes)
                    {
                        <option value="@type">@type</option>
                    }
                </select>
                <select class="filter-select" @bind="FilterStatus">
                    <option value="Active">Active</option>
                    <option value="All">All</option>
                    <option value="Inactive">Inactive</option>
                </select>
            </div>
            <div>
                <button class="btn-secondary" style="margin-right:10px;" @onclick="OpenInactiveModal">View Inactive (@InactiveCount)</button>
                <button class="btn-create" @onclick="OpenCreateModal">+ New Supplier</button>
            </div>
        </div>

        @if (!IsLoaded)
        {
            <div class="loading">Loading suppliers...</div>
        }
        else if (HasError)
        {
            <div class="error-message">
                <h4>⚠️ Database Error</h4>
                <p>@ErrorMessage</p>
                <button class="btn-primary" @onclick="LoadData">Retry</button>
            </div>
        }
        else
        {
            <div class="panel-card">
                <div class="panel-body user-list-container">
                    @if (FilteredSuppliers.Any())
                    {
                        <table class="user-table">
                            <thead>
                                <tr>
                                    <th>Supplier Code</th>
                                    <th>Supplier Name</th>
                                    <th>Type</th>
                                    <th>Contact Person</th>
                                    <th>Phone</th>
                                    <th>Email</th>
                                    <th>Items</th>
                                    <th>Total Spend (YTD)</th>
                                    <th style="text-align:center;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var supplier in FilteredSuppliers)
                                {
                                    <tr>
                                        <td style="font-family:monospace; font-weight:700;">@supplier.SupplierCode</td>
                                        <td style="font-weight: 700; color: #102f33;">@supplier.SupplierName</td>
                                        <td><span class="type-badge">@(supplier.SupplierType ?? "N/A")</span></td>
                                        <td>@(supplier.ContactPerson ?? "-")</td>
                                        <td>@(supplier.ContactPhone ?? "-")</td>
                                        <td>@(supplier.ContactEmail ?? "-")</td>
                                        <td style="font-weight:600;">@(SupplierItemCounts.GetValueOrDefault(supplier.SupplierID, 0))</td>
                                        <td style="color:#004f59; font-weight:700;">₱@(SupplierSpends.GetValueOrDefault(supplier.SupplierID, 0).ToString("N2"))</td>
                                        <td style="text-align:center;">
                                            <div style="display:flex; justify-content:center; gap:8px; align-items:center;">
                                                <button class="btn-icon-action edit" @onclick="() => OpenEditModal(supplier)" title="Edit">
                                                    <svg viewBox="0 0 24 24"><path d="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z"/></svg>
                                                </button>
                                                <button class="btn-icon-action view" @onclick="() => OpenViewModal(supplier)" title="View Details">
                                                    <svg viewBox="0 0 24 24"><path d="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z"/></svg>
                                                </button>
                                                <button class="btn-icon-action archive" @onclick="() => SetInactiveSupplier(supplier)" title="Set Inactive">
                                                    <svg viewBox="0 0 24 24"><path d="M20.54 5.23l-1.39-1.68C18.88 3.21 18.47 3 18 3H6c-.47 0-.88.21-1.16.55L3.46 5.23C3.17 5.57 3 6.02 3 6.5V19c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V6.5c0-.48-.17-.93-.46-1.27zM6.24 5h11.52l.81.97H5.44l.8-.97zM5 19V8h14v11H5zm8.45-9h-2.9v3H8l4 4 4-4h-2.55z"/></svg>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="no-data">No suppliers found</div>
                    }
                </div>
            </div>
        }
    </section>
</div>

@* ===== CREATE/EDIT MODAL ===== *@
@if (ShowModal)
{
    <div class="modal-overlay">
        <div class="modal-content" style="max-width: 700px;">
            <div class="modal-header-teal">
                <h2 style="margin:0; font-size:1.4rem;">@(IsEditMode ? "Edit Supplier" : "New Supplier")</h2>
            </div>

            <div class="form-grid">
                <div class="form-group">
                    <label class="form-label">Supplier Code *</label>
                    <input type="text" class="form-input" @bind="CurrentSupplier.SupplierCode" placeholder="e.g., SUP-001" @bind:event="oninput" disabled="@IsEditMode" />
                </div>

                <div class="form-group">
                    <label class="form-label">Supplier Name *</label>
                    <input type="text" class="form-input" @bind="CurrentSupplier.SupplierName" placeholder="Company name" />
                </div>

                <div class="form-group">
                    <label class="form-label">Supplier Type</label>
                    <select class="form-select" @bind="CurrentSupplier.SupplierType">
                        <option value="">Select Type</option>
                        <option value="FOOD">Food</option>
                        <option value="BEVERAGE">Beverage</option>
                        <option value="AMENITIES">Amenities</option>
                        <option value="CLEANING">Cleaning</option>
                        <option value="LINEN">Linen</option>
                        <option value="MAINTENANCE">Maintenance</option>
                        <option value="OTHER">Other</option>
                    </select>
                </div>

                <div class="form-group">
                    <label class="form-label">Contact Person</label>
                    <input type="text" class="form-input" @bind="CurrentSupplier.ContactPerson" placeholder="Primary contact name" />
                </div>

                <div class="form-group">
                    <label class="form-label">Contact Phone</label>
                    <input type="text" class="form-input" @bind="CurrentSupplier.ContactPhone" placeholder="+63 XXX XXX XXXX" />
                </div>

                <div class="form-group">
                    <label class="form-label">Contact Email</label>
                    <input type="email" class="form-input" @bind="CurrentSupplier.ContactEmail" placeholder="email@company.com" />
                </div>

                <div class="form-group full-width">
                    <label class="form-label">Address</label>
                    <textarea class="form-input" rows="2" @bind="CurrentSupplier.Address" placeholder="Full address"></textarea>
                </div>
            </div>

            <div class="action-footer" style="border:none; padding-bottom:0; margin-top:20px;">
                <button class="btn-primary" @onclick="SaveSupplier">@(IsEditMode ? "Update" : "Add Supplier")</button>
                <button class="btn-secondary" @onclick="CloseModal">Cancel</button>
            </div>
        </div>
    </div>
}

@* ===== VIEW DETAILS MODAL ===== *@
