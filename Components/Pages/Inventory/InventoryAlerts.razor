<div class="page-wrapper">
    <header class="page-topbar">
        <h1>Inventory Alerts</h1>
        <span class="page-topbar-subtitle">Low Stock Warnings & Reorder Suggestions</span>
    </header>

    @if (!IsLoaded)
    {
        <div class="loading">Loading alerts...</div>
    }
    else if (HasError)
    {
        <div class="error-message">
            <h4>?? Error</h4>
            <p>@ErrorMessage</p>
            <button class="btn-primary" @onclick="RetryLoad">Retry</button>
        </div>
    }
    else
    {
        @* ===== ALERT SUMMARY ===== *@
        <div class="alert-summary">
            <div class="alert-stat critical">
                <div class="alert-icon">??</div>
                <div class="alert-info">
                    <span class="alert-count">@OutOfStockCount</span>
                    <span class="alert-label">Out of Stock</span>
                </div>
            </div>
            <div class="alert-stat warning">
                <div class="alert-icon">??</div>
                <div class="alert-info">
                    <span class="alert-count">@LowStockCount</span>
                    <span class="alert-label">Low Stock</span>
                </div>
            </div>
            <div class="alert-stat info">
                <div class="alert-icon">??</div>
                <div class="alert-info">
                    <span class="alert-count">@NearReorderCount</span>
                    <span class="alert-label">Near Reorder Point</span>
                </div>
            </div>
            <div class="alert-stat success">
                <div class="alert-icon">?</div>
                <div class="alert-info">
                    <span class="alert-count">@WellStockedCount</span>
                    <span class="alert-label">Well Stocked</span>
                </div>
            </div>
        </div>

        @* ===== OUT OF STOCK SECTION ===== *@
        @if (OutOfStockItems.Any())
        {
            <div class="alert-section critical-section">
                <div class="section-header">
                    <h2>?? OUT OF STOCK - Immediate Action Required</h2>
                    <span class="item-count">@OutOfStockItems.Count items</span>
                </div>
                <div class="alert-cards">
                    @foreach (var item in OutOfStockItems)
                    {
                        <div class="alert-card critical">
                            <div class="card-header">
                                <span class="item-code">@item.ItemCode</span>
                                <span class="alert-badge critical">OUT OF STOCK</span>
                            </div>
                            <h3>@item.ItemName</h3>
                            <div class="card-details">
                                <div class="detail-row">
                                    <span class="detail-label">Category:</span>
                                    <span>@item.Category</span>
                                </div>
                                <div class="detail-row">
                                    <span class="detail-label">Reorder Point:</span>
                                    <span>@(item.ReorderPoint ?? 0) @item.UnitOfMeasure</span>
                                </div>
                                <div class="detail-row">
                                    <span class="detail-label">Unit Cost:</span>
                                    <span>?@item.UnitCost.ToString("N2")</span>
                                </div>
                            </div>
                            <div class="card-actions">
                                <button class="btn-restock" @onclick="() => OpenRestockModal(item)">
                                    + Restock Now
                                </button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }

        @* ===== LOW STOCK SECTION ===== *@
        @if (LowStockItems.Any())
        {
            <div class="alert-section warning-section">
                <div class="section-header">
                    <h2>?? LOW STOCK - Reorder Recommended</h2>
                    <span class="item-count">@LowStockItems.Count items</span>
                </div>
                <table class="alert-table">
                    <thead>
                        <tr>
                            <th>Code</th>
                            <th>Item Name</th>
                            <th>Category</th>
                            <th>Current Stock</th>
                            <th>Reorder Point</th>
                            <th>Suggested Order</th>
                            <th>Est. Cost</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in LowStockItems)
                        {
                            var currentStock = item.CurrentStock ?? 0;
                            var reorderPoint = item.ReorderPoint ?? 0;
                            var suggestedOrder = Math.Max(reorderPoint * 2 - currentStock, reorderPoint);
                            var estCost = suggestedOrder * item.UnitCost;
                            <tr>
                                <td style="font-family:monospace; font-weight:700;">@item.ItemCode</td>
                                <td style="font-weight:600;">@item.ItemName</td>
                                <td><span class="category-tag">@item.Category</span></td>
                                <td>
                                    <span class="stock-badge low">@currentStock @item.UnitOfMeasure</span>
                                </td>
                                <td>@reorderPoint</td>
                                <td style="font-weight:700; color:#0f766e;">@suggestedOrder @item.UnitOfMeasure</td>
                                <td>?@estCost.ToString("N2")</td>
                                <td>
                                    <button class="btn-sm restock" @onclick="() => OpenRestockModal(item)">Restock</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }

        @* ===== NEAR REORDER POINT SECTION ===== *@
        @if (NearReorderItems.Any())
        {
            <div class="alert-section info-section">
                <div class="section-header">
                    <h2>?? APPROACHING REORDER POINT - Monitor Closely</h2>
                    <span class="item-count">@NearReorderItems.Count items</span>
                </div>
                <table class="alert-table">
                    <thead>
                        <tr>
                            <th>Code</th>
                            <th>Item Name</th>
                            <th>Category</th>
                            <th>Current Stock</th>
                            <th>Reorder Point</th>
                            <th>Buffer</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in NearReorderItems)
                        {
                            var currentStock = item.CurrentStock ?? 0;
                            var reorderPoint = item.ReorderPoint ?? 0;
                            var buffer = currentStock - reorderPoint;
                            var bufferPercent = reorderPoint > 0 ? (buffer * 100 / reorderPoint) : 0;
                            <tr>
                                <td style="font-family:monospace;">@item.ItemCode</td>
                                <td style="font-weight:600;">@item.ItemName</td>
                                <td><span class="category-tag">@item.Category</span></td>
                                <td>@currentStock @item.UnitOfMeasure</td>
                                <td>@reorderPoint</td>
                                <td>
                                    <span class="buffer-badge">+@buffer (@bufferPercent%)</span>
                                </td>
                                <td>
                                    <span class="status-badge monitoring">Monitoring</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }

        @* ===== REORDER SUGGESTIONS ===== *@
        @if (OutOfStockItems.Any() || LowStockItems.Any())
        {
            <div class="reorder-summary">
                <div class="summary-header">
                    <h2>?? Reorder Summary</h2>
                </div>
                <div class="summary-content">
                    <div class="summary-stats">
                        <div class="stat-item">
                            <span class="stat-value">@(OutOfStockItems.Count + LowStockItems.Count)</span>
                            <span class="stat-label">Items to Reorder</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-value">?@TotalReorderCost.ToString("N0")</span>
                            <span class="stat-label">Estimated Total Cost</span>
                        </div>
                    </div>
                    <div class="summary-actions">
                        <button class="btn-primary large" @onclick="ExportReorderList">
                            ?? Export Reorder List
                        </button>
                    </div>
                </div>
            </div>
        }

        @* ===== ALL GOOD MESSAGE ===== *@
        @if (!OutOfStockItems.Any() && !LowStockItems.Any() && !NearReorderItems.Any())
        {
            <div class="all-good">
                <div class="all-good-icon">?</div>
                <h2>All Inventory Items are Well Stocked!</h2>
                <p>No immediate action required. Continue monitoring inventory levels.</p>
                <a href="/inventory/dashboard" class="btn-primary">Return to Dashboard</a>
            </div>
        }
    }
</div>

@* ===== RESTOCK MODAL ===== *@
@if (ShowRestockModal)
{
    <div class="modal-overlay">
        <div class="modal-content" style="max-width: 500px;">
            <div class="modal-header-teal">
                <h2 style="margin:0; font-size:1.4rem;">Restock: @RestockItem.ItemName</h2>
            </div>

            <div style="padding: 20px;">
                <div class="stock-info-box">
                    <div class="info-row">
                        <span>Current Stock:</span>
                        <span class="info-value critical">@(RestockItem.CurrentStock ?? 0) @RestockItem.UnitOfMeasure</span>
                    </div>
                    <div class="info-row">
                        <span>Reorder Point:</span>
                        <span class="info-value">@(RestockItem.ReorderPoint ?? 0) @RestockItem.UnitOfMeasure</span>
                    </div>
                    <div class="info-row">
                        <span>Unit Cost:</span>
                        <span class="info-value">?@RestockItem.UnitCost.ToString("N2")</span>
                    </div>
                </div>

                <div class="form-group" style="margin-top: 20px;">
                    <label class="form-label">Quantity to Add *</label>
                    <input type="number" class="form-input" @bind="RestockQuantity" placeholder="Enter quantity" />
                </div>

                <div class="cost-preview">
                    <span>Estimated Cost:</span>
                    <span class="cost-value">?@((RestockQuantity * RestockItem.UnitCost).ToString("N2"))</span>
                </div>

                <div class="new-stock-preview">
                    <span>New Stock Level:</span>
                    <span class="new-stock-value">@((RestockItem.CurrentStock ?? 0) + RestockQuantity) @RestockItem.UnitOfMeasure</span>
                </div>
            </div>

            <div class="action-footer" style="border:none; padding: 0 16px 16px;">
                <button class="btn-primary" @onclick="ConfirmRestock">Confirm Restock</button>
                <button class="btn-secondary" @onclick="CloseRestockModal">Cancel</button>
            </div>
        </div>
    </div>
}

@code {
    // State
    private bool IsLoaded = false;
    private bool HasError = false;
    private string ErrorMessage = string.Empty;
    private bool ShowRestockModal = false;

    // Data
    private List<InventoryItem> OutOfStockItems = new();
    private List<InventoryItem> LowStockItems = new();
    private List<InventoryItem> NearReorderItems = new();
    private int WellStockedCount = 0;

    // Counts
    private int OutOfStockCount => OutOfStockItems.Count;
    private int LowStockCount => LowStockItems.Count;
    private int NearReorderCount => NearReorderItems.Count;
    private decimal TotalReorderCost = 0;

    // Restock modal
    private InventoryItem RestockItem = new();
    private int RestockQuantity = 0;

    protected override async Task OnInitializedAsync()
    {
        await LoadAlerts();
    }

    private async Task LoadAlerts()
    {
        try
        {
            IsLoaded = false;
            HasError = false;
            ErrorMessage = string.Empty;

            var allItems = await DbContext.InventoryItems
                .Where(i => i.IsActive == true)
                .OrderBy(i => (i.CurrentStock ?? 0) - (i.ReorderPoint ?? 0))
                .ToListAsync();

            // Out of stock (0 stock)
            OutOfStockItems = allItems.Where(i => (i.CurrentStock ?? 0) == 0).ToList();

            // Low stock (below or at reorder point, but not 0)
            LowStockItems = allItems.Where(i => (i.CurrentStock ?? 0) > 0 && (i.CurrentStock ?? 0) <= (i.ReorderPoint ?? 0)).ToList();

            // Near reorder point (within 50% above reorder point)
            NearReorderItems = allItems
                .Where(i => (i.CurrentStock ?? 0) > (i.ReorderPoint ?? 0) && (i.CurrentStock ?? 0) <= (i.ReorderPoint ?? 0) * 1.5m)
                .ToList();

            // Well stocked
            WellStockedCount = allItems.Count - OutOfStockItems.Count - LowStockItems.Count - NearReorderItems.Count;

            // Calculate total reorder cost
            TotalReorderCost = 0;
            foreach (var item in OutOfStockItems.Concat(LowStockItems))
            {
                var currentStock = item.CurrentStock ?? 0;
                var reorderPoint = item.ReorderPoint ?? 0;
                var suggestedOrder = Math.Max(reorderPoint * 2 - currentStock, reorderPoint);
                TotalReorderCost += suggestedOrder * item.UnitCost;
            }

            IsLoaded = true;
        }
        catch (Exception ex)
        {
            HasError = true;
            ErrorMessage = ex.Message;
            IsLoaded = true;
        }
    }

    private async Task RetryLoad()
    {
        await LoadAlerts();
    }

    private void OpenRestockModal(InventoryItem item)
    {
        RestockItem = item;
        var currentStock = item.CurrentStock ?? 0;
        var reorderPoint = item.ReorderPoint ?? 0;
        RestockQuantity = Math.Max(reorderPoint * 2 - currentStock, reorderPoint);
        ShowRestockModal = true;
    }

    private void CloseRestockModal()
    {
        ShowRestockModal = false;
        RestockItem = new();
        RestockQuantity = 0;
    }

    private async Task ConfirmRestock()
    {
        try
        {
            if (RestockQuantity <= 0)
            {
                await JSRuntime.InvokeVoidAsync("alert", "Please enter a valid quantity");
                return;
            }

            var item = await DbContext.InventoryItems.FirstOrDefaultAsync(i => i.ItemID == RestockItem.ItemID);
            if (item != null)
            {
                item.CurrentStock = (item.CurrentStock ?? 0) + RestockQuantity;
                await DbContext.SaveChangesAsync();

                await LoadAlerts();
                CloseRestockModal();
                await JSRuntime.InvokeVoidAsync("alert", $"Stock updated! New stock: {item.CurrentStock} {item.UnitOfMeasure}");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error: {ex.Message}");
        }
    }

    private async Task ExportReorderList()
    {
        // In a real implementation, this would generate a CSV/PDF
        var items = OutOfStockItems.Concat(LowStockItems).ToList();
        var message = $"Reorder List:\n\n";
        foreach (var item in items)
        {
            var currentStock = item.CurrentStock ?? 0;
            var reorderPoint = item.ReorderPoint ?? 0;
            var suggestedOrder = Math.Max(reorderPoint * 2 - currentStock, reorderPoint);
            message += $"• {item.ItemCode} - {item.ItemName}: Order {suggestedOrder} {item.UnitOfMeasure}\n";
        }
        message += $"\nTotal Estimated Cost: ?{TotalReorderCost:N2}";
        await JSRuntime.InvokeVoidAsync("alert", message);
    }
}

